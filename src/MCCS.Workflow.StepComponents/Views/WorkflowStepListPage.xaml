<UserControl x:Class="MCCS.Workflow.StepComponents.Views.WorkflowStepListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:viewModels="clr-namespace:MCCS.Workflow.StepComponents.ViewModels"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance viewModels:WorkflowStepListPageViewModel}">
    <ScrollViewer>
        <ItemsControl
            Grid.IsSharedSizeScope="True"
            ItemsSource="{Binding GroupModels}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <materialDesign:Card>
                        <Expander
                            HorizontalAlignment="Stretch"
                            Header="{Binding GroupName}">
                            <ItemsControl ItemsSource="{Binding Items}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border
                                            x:Name="Border"
                                            Padding="8"
                                            BorderBrush="{DynamicResource MaterialDesignDivider}"
                                            BorderThickness="0,0,0,1"
                                            Background="Transparent"
                                            Cursor="Hand">
                                            <Border.InputBindings>
                                                <MouseBinding 
                                                    MouseAction="LeftClick"
                                                    Command="{Binding DataContext.SelectStepCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                    CommandParameter="{Binding}" />
                                            </Border.InputBindings>
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition SharedSizeGroup="Checkerz" />
                                                    <ColumnDefinition />
                                                </Grid.ColumnDefinitions>
                                                <Button 
                                                    Grid.Column="0"
                                                    Width="40"
                                                    Height="40"
                                                    Style="{StaticResource MaterialDesignFloatingActionSecondaryButton}"
                                                    ToolTip="{Binding Name}"
                                                    Background="{Binding IconBackground}"
                                                    IsHitTestVisible="False">
                                                    <materialDesign:PackIcon
                                                        Width="20"
                                                        Height="20"
                                                        Kind="{Binding IconStr}" />
                                                </Button>
                                                <StackPanel
                                                    Grid.Column="1"
                                                    Margin="8,0,0,0">
                                                    <TextBlock
                                                        FontWeight="Bold"
                                                        FontSize="15"
                                                        Text="{Binding Name}" />
                                                    <TextBlock
                                                        Text="{Binding Description}" />
                                                </StackPanel>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                            </ItemsControl>
                        </Expander> 
                        </materialDesign:Card> 
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Vertical" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </ScrollViewer>
</UserControl>
