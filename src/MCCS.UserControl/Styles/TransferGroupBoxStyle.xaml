<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:MCCS.UserControl.AttachedAttributes">
    <!-- 自定义 CheckBox 样式 -->
    <Style TargetType="CheckBox" x:Key="CustomCheckBoxStyle">
        <Setter Property="Foreground" Value="#333" />
        <!-- 默认文字颜色 -->
        <Setter Property="FontSize" Value="14" />
        <!-- 默认字体大小 -->
        <Setter Property="FontWeight" Value="Normal" />
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="CheckBox">
                    <StackPanel Orientation="Horizontal">
                        <Grid Width="20" Height="20" Margin="5">
                            <Border x:Name="Border"
                                        Background="White"
                                        BorderBrush="#D9D9D9"
                                        BorderThickness="1"
                                        CornerRadius="4" />
                            <Path x:Name="CheckMark"
                                      Data="M 0 5 L 5 10 L 15 0"
                                      Stroke="White"
                                      StrokeThickness="2.5"
                                      StrokeEndLineCap="Round"
                                      StrokeStartLineCap="Round"
                                      Visibility="Collapsed"
                                      VerticalAlignment="Center"
                                      HorizontalAlignment="Center"
                                      RenderTransformOrigin="0.5,0.5">
                                <Path.RenderTransform>
                                    <ScaleTransform ScaleX="0.8" ScaleY="0.8"/>
                                </Path.RenderTransform>
                            </Path>
                            <!-- 中间横线 -->
                            <Rectangle x:Name="IndeterminateMark"
                                       Width="10" Height="10"
                                       Fill="#1677FF"
                                       RadiusX="1" RadiusY="1"
                                       Visibility="Collapsed"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Grid>
                        <ContentPresenter VerticalAlignment="Center" />
                    </StackPanel>
                    <ControlTemplate.Triggers>
                        <!-- 鼠标悬停时边框颜色变化 -->
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="Border" Property="BorderBrush" Value="DodgerBlue" />
                        </Trigger>
                        <Trigger Property="IsChecked" Value="False">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <!-- 选中时显示对勾 -->
                        <Trigger Property="IsChecked" Value="True">
                            <Setter TargetName="Border" Property="Background" Value="#1677FF"></Setter>
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Visible" />
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Collapsed"/>
                        </Trigger>
                        <Trigger Property="IsChecked" Value="{x:Null}">
                            <Setter TargetName="CheckMark" Property="Visibility" Value="Collapsed"/>
                            <Setter TargetName="IndeterminateMark" Property="Visibility" Value="Visible"/>
                        </Trigger>
                        <!-- 禁用样式 -->
                        <Trigger Property="IsEnabled" Value="False">
                            <Setter TargetName="Border" Property="Opacity" Value="0.3" />
                            <Setter Property="Foreground" Value="Gray" />
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <Style x:Key="TransferGroupBoxHeaderStyle" TargetType="GroupBox">
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="GroupBox">
                    <Grid>
                        <Border Grid.Row="0" Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                CornerRadius="8"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="{TemplateBinding BorderBrush}" >
                                    <StackPanel Orientation="Horizontal">
                                        <CheckBox  
                                            IsThreeState="True" Content="全选"   
                                            Style="{StaticResource CustomCheckBoxStyle}" />
                                        <ContentPresenter x:Name="Header" 
                                                          ContentSource="Header" 
                                                          Margin="50,0,0,0" 
                                                          HorizontalAlignment="Left" 
                                                          VerticalAlignment="Center" />
                                    </StackPanel>
                                </Border>
                                <ContentPresenter Grid.Row="1" x:Name="Content" 
                                                  ContentSource="Content" 
                                                  Margin="{TemplateBinding Padding}" />
                            </Grid>
                            
                        </Border> 
                    </Grid> 
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>