<UserControl x:Class="MCCS.UserControl.Transfer.TransferUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.UserControl.Transfer"
             xmlns:attachedAttributes="clr-namespace:MCCS.UserControl.AttachedAttributes"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="/MCCS.UserControl;component/Styles/TransferGroupBoxStyle.xaml"></ResourceDictionary>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Background="Transparent">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Border Grid.Column="0"  
                CornerRadius="8"
                BorderThickness="1"
                BorderBrush="#D9D9D9"
                x:Name="SourceGroupBox">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#D9D9D9"  Padding="8">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox  
                            x:Name="SourceSelectAllCheckBox"
                            IsThreeState="True" Content="全选" 
                            PreviewMouseLeftButtonDown="SourceSelectAllCheckBox_OnPreviewMouseLeftButtonDown"
                            Style="{StaticResource CustomCheckBoxStyle}" />
                        <TextBlock x:Name="SourceHeader"   
                                   Margin="50,0,0,0" 
                                   FontSize="14"
                                   FontWeight="Bold"
                                   HorizontalAlignment="Left" 
                                   VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
                <ListBox Grid.Row="1" x:Name="SourceList" 
                         BorderThickness="0"
                         Background="Transparent"
                         ScrollViewer.VerticalScrollBarVisibility="Auto"
                         ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Click="SourceListBox_Clicked"
                                          Tag="{Binding Id}"
                                          Style="{StaticResource CustomCheckBoxStyle}"
                                          Content="{Binding Name}"  ></CheckBox>
                                <!--<TextBlock Grid.Column="1" Text="{Binding Name}" 
                                           Foreground="Gray" FontSize="12"/>-->
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Image Grid.Row="1"
                       x:Name="SourceNodataImage"
                       Width="64" Height="64"  
                       VerticalAlignment="Center" 
                       HorizontalAlignment="Center" 
                       Source="/MCCS.UserControl;component/Assert/no-data.png" />
            </Grid>
        </Border>
        <StackPanel Grid.Column="1" Orientation="Vertical" VerticalAlignment="Center" >
            <Border x:Name="RightToLeft"
                    CornerRadius="5" 
                    Background="White" 
                    BorderBrush="#D9D9D9"
                    MouseLeftButtonDown="RightToLeft_OnMouseLeftButtonDown"
                    BorderThickness="2"
                    Height="32" Width="32">
                <Image Source="/MCCS.UserControl;component/Assert/left_32.png"/>
            </Border>
            <Border x:Name="LeftToRight"
                    CornerRadius="5" 
                    BorderThickness="2"
                    BorderBrush="#D9D9D9"
                    Background="White" 
                    Height="32" Width="32" 
                    MouseLeftButtonDown="LeftToRight_OnMouseLeftButtonDown"
                    Margin="8">
                <Image Source="/MCCS.UserControl;component/Assert/right_32.png"/>
            </Border>
        </StackPanel>
        <Border Grid.Column="2" x:Name="TargetGroupBox"
                BorderThickness="1"
                BorderBrush="#D9D9D9"
                CornerRadius="8">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="*"></RowDefinition>
                </Grid.RowDefinitions>
                <Border Grid.Row="0" BorderThickness="0,0,0,1" BorderBrush="#D9D9D9" Padding="8">
                    <StackPanel Orientation="Horizontal">
                        <CheckBox  
                            x:Name="TargetSelectAllCheckBox"
                            IsThreeState="True" Content="全选"
                            PreviewMouseLeftButtonDown="TargetSelectAllCheckBox_OnPreviewMouseLeftButtonDown"
                            Style="{StaticResource CustomCheckBoxStyle}" />
                        <TextBlock x:Name="TargetHeader"   
                                   FontSize="14"
                                   FontWeight="Bold"
                                          Margin="50,0,0,0" 
                                          HorizontalAlignment="Left" 
                                          VerticalAlignment="Center" />
                    </StackPanel>
                </Border>
                <ListBox Grid.Row="1"
                    x:Name="TargetListBox"   
                    BorderThickness="0"
                    Background="Transparent"
                    ScrollViewer.VerticalScrollBarVisibility="Auto"
                    ScrollViewer.HorizontalScrollBarVisibility="Disabled">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="0,2">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <CheckBox IsChecked="{Binding IsSelected}"
                                          Click="TargetListBox_Clicked"
                                          Tag="{Binding Id}"
                                          Style="{StaticResource CustomCheckBoxStyle}"
                                          Content="{Binding Name}"  ></CheckBox>
                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                <Image  Grid.Row="1"
                        x:Name="TargetNodataImage"
                        Width="64" Height="64" 
                        VerticalAlignment="Center" 
                        HorizontalAlignment="Center" 
                        Source="/MCCS.UserControl;component/Assert/no-data.png" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
