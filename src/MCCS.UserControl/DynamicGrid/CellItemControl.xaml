<UserControl x:Class="MCCS.UserControl.DynamicGrid.CellItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.UserControl.DynamicGrid"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Border CornerRadius="5" BorderThickness="2" BorderBrush="AliceBlue">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
                <Button Name="HorizontalCut" Width="80" Height="30" Margin="0,0,5,0" Content="横切" Click="OnHorizontalCutClick"></Button>
                <Button Name="VerticalCut" Width="80" Height="30" Margin="0,0,5,0" Content="竖切"  Click="OnVerticalCutClick"></Button>
                <Button Width="80" Height="30" Content="删除"></Button>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
