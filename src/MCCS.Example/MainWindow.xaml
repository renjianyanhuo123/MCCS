<Window x:Class="MCCS.Example.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCS.Example"
        xmlns:customPagination="clr-namespace:MCCS.UserControl.Pagination;assembly=MCCS.UserControl"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="1000">
    <Grid Background="Transparent">
        <customPagination:PaginationUserControl 
            x:Name="MyUserControl" 
            ShowTotal="False"
            Width="1000" 
            Height="30" 
            Total="40000"
            DefaultPageSize="50"
            Background="LightGray"/>
    </Grid>
</Window>
