<UserControl x:Class="MCCS.Views.Pages.MainContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:globalNotification="clr-namespace:MCCS.Components.GlobalNotification"
             xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:menuItemModel="clr-namespace:MCCS.Models.MainPages"
             regions:ViewModelLocator.AutoWireViewModel="True"
             xmlns:mccs="clr-namespace:MCCS"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:pages="clr-namespace:MCCS.ViewModels.Pages"
             xmlns:components="clr-namespace:MCCS.Components"
             d:DataContext="{d:DesignInstance Type=pages:MainContentPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="CustomColorMaterialDesign3NavigationListBoxItem"
              TargetType="ListBoxItem"
              BasedOn="{StaticResource MaterialDesign3.NavigationRailListBoxItem}">
            <Setter Property="Background" Value="#4A4458" />
            <Setter Property="Foreground" Value="#E8DEF8" />
        </Style>
    </UserControl.Resources>
    <materialDesign:DialogHost Identifier="RootDialog">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80" />
                <RowDefinition Height="*" />
                <RowDefinition Height="30" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid Width="100" Grid.Row="0" Grid.Column="0" Grid.RowSpan="3" Background="#F1F1F1">
                <!--<Grid.Background>
                    <ImageBrush ImageSource="/Resources/Gemini_Generated_Image_hvfw7rhvfw7rhvfw.png" Stretch="UniformToFill"/>
                </Grid.Background>-->
                <Grid.RowDefinitions>
                    <RowDefinition Height="auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions> 
                <Button
                Width="90"
                Height="90"
                Margin="0,120,0,240"
                materialDesign:ButtonAssist.CornerRadius="32"
                Background="#F1F1F1"
                BorderThickness="0"
                Foreground="#FFD8E4"
                Style="{StaticResource MaterialDesignFlatMidBgButton}" Cursor="Hand" ClipToBounds="True">
                    <components:PopwilLogo Width="Auto" Height="Auto" LogoColor="Red" />
                </Button>
                <Viewbox
                Grid.Row="1"
                Width="100"
                VerticalAlignment="Top"
                Stretch="Uniform">
                    <ListBox
                      Grid.Row="1"
                      Margin="0,0,0,0"
                      Foreground="#E8DEF8"
                      ItemsSource="{Binding Menus}"
                      SelectedItem="{Binding SelectedMenuItem, Mode=TwoWay}">
                        <ListBox.ItemContainerStyle>
                            <Style
                                TargetType="ListBoxItem"
                                BasedOn="{StaticResource MaterialDesign3.NavigationRailListBoxItem}">
                                <Setter Property="FontSize"
                                        Value="10"></Setter>
                                <Setter
                                    Property="Background"
                                    Value="#E6E4C0" />
                                <Setter
                                    Property="Foreground"
                                    Value="#48473A" /> 
                                <Setter
                                    Property="materialDesign:BadgedAssist.BadgeBackground"
                                    Value="#930006" />
                                <Setter
                                    Property="materialDesign:BadgedAssist.BadgeForeground"
                                    Value="#FFDAD4" />
                                <Setter
                                    Property="materialDesign:BadgedAssist.IsMiniBadge"
                                    Value="True" />
                                <Setter
                                    Property="materialDesign:NavigationRailAssist.SelectedIcon"
                                    Value="{Binding SelectedIcon}" />
                                <Setter
                                    Property="materialDesign:NavigationRailAssist.UnselectedIcon"
                                    Value="{Binding UnselectedIcon}" />
                            </Style>
                        </ListBox.ItemContainerStyle>
                        <ListBox.Resources>
                            <DataTemplate DataType="{x:Type menuItemModel:MainMenuItemModel}">
                                <TextBlock FontSize="10" Text="{Binding Name}" />
                            </DataTemplate>
                        </ListBox.Resources>
                    </ListBox>
                </Viewbox>
            </Grid>
            <Grid Grid.Row="0" Grid.Column="1"  Background="#F1F1F1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="100"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Button Height="64" Width="64" Grid.Row = "0" Grid.Column="1"
                        Margin="0,0,36,0"
                        Style="{DynamicResource MaterialDesignOutlinedSecondaryLightButton}"
                        Command="{Binding LogoutCommand}">
                    <materialDesign:PackIcon Width="Auto" Height="Auto" Kind="Logout" />
                </Button>
            </Grid>
            <ContentControl Grid.Row="1" Grid.Column="1" regions:RegionManager.RegionName="{x:Static mccs:GlobalConstant.MainContentRegionName}" Focusable="True" IsTabStop="False"
                            Background="#F1F1F1">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="Loaded">
                        <b:InvokeCommandAction Command="{Binding MainRegionLoadedCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
            </ContentControl>
            <StatusBar Grid.Row="2" Grid.Column="1"  Background="#F1F1F1">
                <StatusBarItem>Application</StatusBarItem>
                <Separator Style="{StaticResource MahApps.Styles.Separator.StatusBar}" />
                <StatusBarItem>Time: 2025-02-26</StatusBarItem>
                <StatusBarItem Content="{DynamicResource Company}" />
                <!--<StatusBar.Background>
                    <ImageBrush ImageSource="/Resources/Gemini_Generated_Image_hvfw7rhvfw7rhvfw.png" Stretch="UniformToFill"/>
                </StatusBar.Background>-->
            </StatusBar> 
            <globalNotification:NotificationContainer Height="Auto" Width="Auto" 
                                          Grid.Row="0" 
                                          Grid.Column="0"
                                          Grid.ColumnSpan="2"
                                          HorizontalAlignment="Right"
                                          VerticalAlignment="Top"
                                          Margin="0,10,10,0"></globalNotification:NotificationContainer>
        </Grid>
    </materialDesign:DialogHost>
</UserControl>
