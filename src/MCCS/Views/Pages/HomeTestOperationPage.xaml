<UserControl x:Class="MCCS.Views.Pages.HomeTestOperationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Background="AliceBlue">
     
    <UserControl HorizontalAlignment="Center" VerticalAlignment="Center">
        <Grid> 
            <Path Stroke="#404040" StrokeThickness="2">
                <Path.Data>
                    <PathGeometry>
                        <PathFigure StartPoint="0,30" IsClosed="True">
                            <LineSegment Point="0,70"/>
                            <ArcSegment Point="200,70" Size="100,20" SweepDirection="Clockwise"/>
                            <LineSegment Point="200,30"/>
                            <ArcSegment Point="0,30" Size="100,20" SweepDirection="Clockwise"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
                <Path.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,0">
                        <GradientStop Color="#505050" Offset="0"/>
                        <GradientStop Color="#303030" Offset="1"/>
                    </LinearGradientBrush>
                </Path.Fill>
            </Path>
 
            <Rectangle x:Name="PistonRod" Width="160" Height="12" 
                     RenderTransformOrigin="0.5,0.5" Canvas.Left="20" Canvas.Top="44">
                <Rectangle.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#C0C0C0" Offset="0"/>
                        <GradientStop Color="#808080" Offset="1"/>
                    </LinearGradientBrush>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <TranslateTransform X="{Binding ElementName=slPosition, Path=Value}"/>
                </Rectangle.RenderTransform>
            </Rectangle> 
            <Ellipse Width="12" Height="12" Margin="10" HorizontalAlignment="Left" VerticalAlignment="Top">
                <Ellipse.Fill>
                    <SolidColorBrush x:Name="statusLight" Color="Gray"/>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <DropShadowEffect BlurRadius="8" Color="#AAFF00"/>
                </Ellipse.Effect>
            </Ellipse>
 
            <Border Width="60" Height="60" CornerRadius="30" Background="#202020" 
                   HorizontalAlignment="Right" VerticalAlignment="Top" Margin="10">
                <TextBlock Text="{Binding ElementName=slPosition, Path=Value, StringFormat={}{0}%}" 
                         Foreground="White" FontSize="14" HorizontalAlignment="Center" 
                         VerticalAlignment="Center"/>
            </Border>
        </Grid>
    </UserControl>
 
    <StackPanel VerticalAlignment="Bottom" HorizontalAlignment="Center" Margin="20">
        <Slider x:Name="slPosition" Minimum="0" Maximum="100" Width="200" 
                />
        <Button Content="紧急停止" Width="100" Margin="0 10"  
               Background="#FF4040" Foreground="White"/>
    </StackPanel> 
</Grid>
</UserControl>
