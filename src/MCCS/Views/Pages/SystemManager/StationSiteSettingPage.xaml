<UserControl x:Class="MCCS.Views.Pages.SystemManager.StationSiteSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.SystemManager" 
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:systemmanager="clr-namespace:MCCS.ViewModels.Pages.SystemManager"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             d:DataContext="{d:DesignInstance Type=systemmanager:StationSiteSettingPageViewModel}"
             mc:Ignorable="d"  
             d:DesignHeight="450" d:DesignWidth="800">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center">
            <Button Content="新增站点" Width="100" Command="{Binding AddStationCommand}"></Button>
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            CanUserAddRows="False"
            ColumnWidth="*"
            ItemsSource="{Binding StationSites}"
            SelectionMode="Extended"
            AutoGenerateColumns="False"
            SelectionUnit="Cell" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding StationId}" Visibility="Hidden"></DataGridTextColumn>
                <DataGridTextColumn Header="站点名称" Binding="{Binding StationName}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="描述" Binding="{Binding StationName}" IsReadOnly="True" Width="*"/>
                <DataGridTemplateColumn Header="是否正在使用" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ToggleButton 
                                IsChecked="{Binding IsUsing, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="创建时间" IsReadOnly="True" Binding="{Binding CreateTime}" Width="*"/>
                <DataGridTextColumn Header="更新时间" IsReadOnly="True" Binding="{Binding UpdateTime}" Width="*"/>
                <DataGridTemplateColumn Header="操作"  Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button Content="编辑" Width="100"
                                    Command="{Binding DataContext.EditStationCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding StationId}"></Button> 
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
