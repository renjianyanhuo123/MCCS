<UserControl x:Class="MCCS.Views.Pages.SystemManager.SystemManager"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.SystemManager"
             xmlns:convert="clr-namespace:MCCS.Converters.SystemManager"
             xmlns:localViewModel="clr-namespace:MCCS.ViewModels.Pages.SystemManager"
             xmlns:regionName="clr-namespace:MCCS"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" 
             d:DataContext="{d:DesignInstance localViewModel:SystemManagerViewModel}">
    <UserControl.Resources>
        <ResourceDictionary>
            <convert:StringToBooleanConverter x:Key="StringToBooleanConverter" />
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="4"
            Background="#F3F3F3"
            Orientation="Horizontal">
            <b:Interaction.Triggers>
                <b:EventTrigger EventName="Loaded">
                    <b:InvokeCommandAction 
                        Command="{Binding JumpToCommand}"
                        CommandParameter="{Binding CurrentSelectedPage}"/>
                </b:EventTrigger>
            </b:Interaction.Triggers>
            <RadioButton
                Margin="4"
                FontWeight="Bold"
                Content="{StaticResource PermissionManagement}"
                IsChecked="{Binding CurrentSelectedPage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter={x:Static localViewModel:PermissionManagementViewModel.Tag}}"
                GroupName="Navigation"
                Tag="{x:Static localViewModel:PermissionManagementViewModel.Tag}"
                Command="{Binding JumpToCommand}"
                CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="4"
                FontWeight="Bold"
                Content="{StaticResource HardwareManagement}"
                IsChecked="{Binding CurrentSelectedPage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter={x:Static localViewModel:HardwareSettingPageViewModel.Tag}}"
                GroupName="Navigation"
                Tag="{x:Static localViewModel:HardwareSettingPageViewModel.Tag}"
                Command="{Binding JumpToCommand}"
                CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="4"
                FontWeight="Bold"
                Content="{StaticResource StationConfiguration}"
                IsChecked="{Binding CurrentSelectedPage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter={x:Static localViewModel:StationSiteSettingPageViewModel.Tag}}"
                GroupName="Navigation"
                Tag="{x:Static localViewModel:StationSiteSettingPageViewModel.Tag}"
                Command="{Binding JumpToCommand}"
                CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
            <RadioButton
                Margin="4"
                FontWeight="Bold"
                Content="{StaticResource Model3DSetting}"
                IsChecked="{Binding CurrentSelectedPage, Converter={StaticResource StringToBooleanConverter}, ConverterParameter={x:Static localViewModel:Model3DSettingPageViewModel.Tag}}"
                GroupName="Navigation"
                Tag="{x:Static localViewModel:Model3DSettingPageViewModel.Tag}"
                Command="{Binding JumpToCommand}"
                CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"
                Style="{StaticResource MaterialDesignTabRadioButton}" />
        </StackPanel>
        <!-- Main Content Region -->
        <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static regionName:GlobalConstant.SystemManagerRegionName}" />
    </Grid>
</UserControl>
