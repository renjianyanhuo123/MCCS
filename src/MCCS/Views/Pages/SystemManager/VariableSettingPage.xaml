<UserControl x:Class="MCCS.Views.Pages.SystemManager.VariableSettingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.SystemManager"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:systemmanager="clr-namespace:MCCS.ViewModels.Pages.SystemManager"
             xmlns:transfer="clr-namespace:MCCS.UserControl.Transfer;assembly=MCCS.UserControl"
             d:DataContext="{d:DesignInstance Type=systemmanager:VariableSettingPageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
    </UserControl.Resources>
    <Grid>
         <Grid.RowDefinitions>
             <RowDefinition Height="Auto"></RowDefinition>
             <RowDefinition Height="Auto"></RowDefinition>
             <RowDefinition Height="*"></RowDefinition>
             <RowDefinition Height="80"></RowDefinition>
         </Grid.RowDefinitions>  
        <GroupBox Header="基础信息">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" >
                    <materialDesign:PackIcon Kind="Asterisk" Width="8" Height="8" VerticalAlignment="Center" />
                    <TextBlock Text="变量名称:" Margin="5" VerticalAlignment="Center" />
                    <TextBox Width="200" materialDesign:HintAssist.Hint="请输入变量名称" Text="{Binding VariableName}" Margin="5"/>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="内部名称:" Margin="5" VerticalAlignment="Center" />
                    <TextBlock Text="{Binding InternalId}"  VerticalAlignment="Center"  Margin="5" />
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal">
                    <TextBlock Text="是否可见:" Margin="5" VerticalAlignment="Center" />
                    <ToggleButton Height="30" Margin="5" IsChecked="{Binding IsShowable}"></ToggleButton>
                </StackPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="1" Header="设置信息">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition> 
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                    <RowDefinition Height="Auto"></RowDefinition>
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal">
                    <TextBlock Text="是否可控制:" Margin="5" VerticalAlignment="Center" />
                    <ToggleButton Height="30" Margin="5" IsChecked="{Binding IsCanControl}"></ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock Text="是否可标定:" Margin="5" VerticalAlignment="Center" />
                    <ToggleButton Height="30" Margin="5" IsChecked="{Binding IsCanCalibrate}"></ToggleButton>
                </StackPanel>
                <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Orientation="Horizontal">
                    <TextBlock Text="是否可设置极限:" Margin="5" VerticalAlignment="Center" />
                    <ToggleButton  Height="30" Margin="5" IsChecked="{Binding IsCanSetLimit}"></ToggleButton>
                </StackPanel>
                <WrapPanel Grid.Row="2" 
                           Grid.Column="0" 
                           Grid.ColumnSpan="2" 
                           Visibility="{Binding IsCanSetLimit, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <CheckBox Content="无停止动作, 停用事件检测器" Margin="10"/>
                    <CheckBox Content="作动器断电" Margin="10" />
                    <CheckBox Content="系统停止" Margin="10" />
                    <CheckBox Content="断开阀门, 作动器复位" Margin="10" />
                </WrapPanel>
            </Grid>
        </GroupBox>
        <GroupBox Grid.Row="2" Header="选择硬件信息">
            <transfer:TransferUserControl SourceName="可分配资源"
                                          TargetName="已分配资源"
                                          SourceItems="{Binding SourceModels}"
                                          TargetItems="{Binding TargetModels}"></transfer:TransferUserControl>
        </GroupBox>
        <Border Grid.Row="3"
                Grid.Column="0"
                BorderThickness="0,1,0,0"
                BorderBrush="Gray">
            <Button
                Width="150"
                Content="保存"
                Command="{Binding SaveCommand}"
                Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                ToolTip="保存" />
        </Border>
    </Grid>
</UserControl>
