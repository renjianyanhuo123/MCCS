<UserControl x:Class="MCCS.Views.Pages.TestStartingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             xmlns:convert="clr-namespace:MCCS.Converters"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <convert:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter"></convert:InverseBoolToVisibleConverter>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 3D视窗 -->
        <hx:Viewport3DX 
            x:Name="viewport"
            Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}"
                        Grid.Row="1" Grid.Column="0"
                        BackgroundColor="#595959"
                        EffectsManager="{Binding EffectsManager}"
                        Camera="{Binding Camera}"
                        EnableSwapChainRendering="True"
                        ShowCoordinateSystem="True"
                        FXAALevel="Low">

            <hx:Viewport3DX.InputBindings>
                <KeyBinding Key="B" Command="hx:ViewportCommands.BackView" />
                <KeyBinding Key="F" Command="hx:ViewportCommands.FrontView" />
                <KeyBinding Key="U" Command="hx:ViewportCommands.TopView" />
                <KeyBinding Key="D" Command="hx:ViewportCommands.BottomView" />
                <KeyBinding Key="L" Command="hx:ViewportCommands.LeftView" />
                <KeyBinding Key="R" Command="hx:ViewportCommands.RightView" />
                <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                <MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="RightClick" />
                <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="LeftClick" />
            </hx:Viewport3DX.InputBindings>

             <!--光照--> 
            <hx:AmbientLight3D Color="#363636" />
            <hx:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="#D6D6D6" />

             <!--模型内容--> 
            <hx:Element3DPresenter Content="{Binding GroupModel}"/>
            <hx:PostEffectMeshBorderHighlight EffectName="highlight" /> 
            <hx:AxisPlaneGridModel3D
                 x:Name="plane"
                 AutoSpacing="False"
                 RenderShadowMap="True"
                 Offset="-0.2" />
        </hx:Viewport3DX>
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
            <TextBlock Text="当前选中模型: " VerticalAlignment="Center"/>
            <TextBlock x:Name="SelectedModelText" VerticalAlignment="Center" Margin="5,0" Text="无"/>
        </StackPanel>
        <StackPanel 
            VerticalAlignment="Center" 
            Grid.Row="1" 
            Grid.Column="0" 
            ZIndex="3"
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Width="600" Height="10" Value="90"></ProgressBar>
            <TextBlock FontWeight="Bold"
                       Margin="0 8" 
                       HorizontalAlignment="Center" 
                       Text="模型加载中... 90%" 
                       Foreground="#666666"></TextBlock>
        </StackPanel>
    </Grid>
</UserControl>
