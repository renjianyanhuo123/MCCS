<UserControl x:Class="MCCS.Views.Pages.TestStartingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS"
             xmlns:localView="clr-namespace:MCCS.Views.Pages"
             xmlns:behaviors="clr-namespace:MCCS.Behaviors"
             xmlns:convert="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:pages="clr-namespace:MCCS.ViewModels.Pages" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             xmlns:controllers="clr-namespace:MCCS.Views.Pages.Controllers"
             xmlns:vmControllers="clr-namespace:MCCS.ViewModels.Pages.Controllers"
             xmlns:testModelOperations="clr-namespace:MCCS.Views.Pages.TestModelOperations"
             d:DataContext="{d:DesignInstance Type=pages:TestStartingPageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:Name="TestStartingControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <convert:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter" />
            <convert:BoolToStyleConverter x:Key="BoolToStyleConverter" />
            <convert:BoolToStopAndStartTextContentConverter x:Key="BoolToStopAndStartTextContentConverter" />
            <convert:BoolToPauseAndContinueTextContentConverter x:Key="BoolToPauseAndContinueTextContentConverter" />
            <convert:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" />
            <convert:BoolToColumnSpanConverter x:Key="BoolToColumnSpanConverter" /> 
            <convert:BooleanToPauseAndContinueIconConverter  x:Key="BooleanToPauseAndContinueIconConverter" />
            <convert:BooleanToStopAndStartIconConverter  x:Key="BooleanToStopAndStartIconConverter" />
            <!-- 定义不同ViewModel对应的View -->
            <DataTemplate DataType="{x:Type vmControllers:ControllerMainPageViewModel}">
                <controllers:ControllerMainPage />
            </DataTemplate>
            <DataTemplate DataType="{x:Type vmControllers:MultipleControllerMainPageViewModel}">
                <controllers:MultipleControllerMainPage />
            </DataTemplate>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <b:Interaction.Triggers>
            <!-- 新增Ctrl键按下事件 -->
            <b:EventTrigger EventName="KeyDown">
                <b:InvokeCommandAction 
                    Command="{Binding CtrlKeyDownCommand}" 
                    PassEventArgsToCommand="True"/>
            </b:EventTrigger>
            <!-- 新增Ctrl键弹起事件 -->
            <b:EventTrigger EventName="KeyUp">
                <b:InvokeCommandAction 
                    Command="{Binding CtrlKeyUpCommand}" 
                    PassEventArgsToCommand="True"/>
            </b:EventTrigger>
        </b:Interaction.Triggers>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 顶部按钮区域 - 最先声明 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
            <!-- 开始和终止按钮 -->
            <StackPanel>
                <Button 
                    Margin="15"
                    VerticalAlignment="Center"
                    Content="{Binding IsStartedTest, Converter={StaticResource BooleanToStopAndStartIconConverter}}" 
                    Style="{Binding IsStartedTest, Converter={StaticResource BoolToStyleConverter}}"
                    Command="{Binding StartTestCommand}"
                    ToolTip="{Binding IsStartedTest, Converter={StaticResource BoolToStopAndStartTextContentConverter}}">
                </Button>
                <TextBlock Text="{Binding IsStartedTest, Converter={StaticResource BoolToStopAndStartTextContentConverter}}" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
            </StackPanel>
            <!-- 暂停和继续按钮 -->
            <StackPanel Visibility="{Binding IsStartedTest, Converter={StaticResource BoolToVisibilityConverter}}">
                <Button 
                    Margin="15"
                    VerticalAlignment="Center"
                    Content="{Binding IsPaused, Converter={StaticResource BooleanToPauseAndContinueIconConverter}}" 
                    Style="{Binding IsPaused, Converter={StaticResource BoolToStyleConverter}}"
                    Command="{Binding PauseTestCommand}"
                    ToolTip="{Binding IsPaused, Converter={StaticResource BoolToPauseAndContinueTextContentConverter}}">
                </Button>
                <TextBlock Text="{Binding IsPaused, Converter={StaticResource BoolToPauseAndContinueTextContentConverter}}" 
                           VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
            </StackPanel>
            <Button
                Width="200"
                Margin="100,0,0,0"
                Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                Content="展示曲线图像"
                Command="{Binding ShowCurveCommand}" />
        </StackPanel>
        <!-- 3D视窗容器 - 第二个声明（作为背景层） -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="3" />
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- 使用Popup实现右键菜单 -->
            <Popup x:Name="modelPopupMenu" 
                    IsOpen="{Binding IsShowContextMenu}"
                    Placement="Mouse"
                    AllowsTransparency="True"
                    StaysOpen="False">
                <testModelOperations:RightMenuMainPage />
            </Popup>
            <!-- 3D视窗  EnableSwapChainRendering="True"：是否使用GPU渲染 -->
            <hx:Viewport3DX  
                x:Name="viewport"
                Grid.Row="0"
                Grid.Column="0"
                Grid.ColumnSpan="{Binding IsShowController, Converter={StaticResource BoolToColumnSpanConverter}}"
                Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}"
                BackgroundColor="{Binding BackgroundColor}"
                EffectsManager="{Binding EffectsManager}"
                Camera="{Binding Camera}" 
                IsHitTestVisible="True"
                EnableSwapChainRendering="False"
                ShowCoordinateSystem="True" 
                FXAALevel="Low">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown3D">
                        <b:InvokeCommandAction Command="{Binding Model3DMouseDownCommand}" PassEventArgsToCommand="True"/>
                    </b:EventTrigger>
                    <!-- 新增右键事件处理 -->
                    <b:EventTrigger EventName="MouseDown3D">
                        <b:InvokeCommandAction 
                            Command="{Binding Model3DRightMouseDownCommand}" 
                            PassEventArgsToCommand="True"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <b:Interaction.Behaviors>
                    <behaviors:MouseMoveHitTestBehavior HitTestCommand="{Binding Model3DMouseMoveCommand}" />
                </b:Interaction.Behaviors>
                <hx:Viewport3DX.InputBindings>
                    <KeyBinding Key="B" Command="hx:ViewportCommands.BackView" />
                    <KeyBinding Key="F" Command="hx:ViewportCommands.FrontView" />
                    <KeyBinding Key="U" Command="hx:ViewportCommands.TopView" />
                    <KeyBinding Key="D" Command="hx:ViewportCommands.BottomView" />
                    <KeyBinding Key="L" Command="hx:ViewportCommands.LeftView" />
                    <KeyBinding Key="R" Command="hx:ViewportCommands.RightView" />
                    <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                    <!--<MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="Alt+LeftClick" />-->
                    <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                    <!-- 移除了 LeftClick 的 Pan 命令，改为使用 Shift+LeftClick 或 Alt+LeftClick -->
                    <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="Shift+LeftClick" />
                </hx:Viewport3DX.InputBindings>
                <!-- 背景环境 -->
                <hx:EnvironmentMap3D Texture="{Binding EnvironmentMap}" />
                <!--光照-->
                <hx:AmbientLight3D Color="#414141" />
                <hx:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="#D6D6D6" />
                <!-- 广告牌 状态显示 -->
                <hx:InstancingBillboardModel3D
                    x:Name="BillboardModel3D"
                    Geometry="{Binding BillboardModel}"
                    InstanceParamArray="{Binding BillboardInstanceParams}"
                    Instances="{Binding BillboardInstances}" />
                <!-- 绑定Billboard文本集合 -->
                <hx:TopMostGroup3D x:Name="TopMostGroup" EnableTopMost="True">
                    <!--动态文本: FixedSize: 是否固定大小 Geometry: 绑定到 ViewModel 中的 BatchedText 属性 IsHitTestVisible: 是否可被鼠标事件检测到-->
                    <hx:BillboardTextModel3D
                            FixedSize="True"
                            Geometry="{Binding CollectionDataLabels}"
                            IsHitTestVisible="False" />
                </hx:TopMostGroup3D>
                <!-- 连线 -->
                <hx:LineGeometryModel3D 
                        Geometry="{Binding ConnectionLineGeometry}" 
                        Color="Red" 
                        Thickness="2"
                        IsHitTestVisible="False"/>
                <!--模型内容-->
                <hx:Element3DPresenter Content="{Binding GroupModel}"/>
                <hx:PostEffectMeshBorderHighlight EffectName="highlight" />
                <hx:AxisPlaneGridModel3D
                        x:Name="Plane"
                        AutoSpacing="True"
                        Offset="-65" />
            </hx:Viewport3DX>
            <GridSplitter Grid.Row="0"
                          Grid.Column="1"
                          Width="3"
                          Background="LightGray"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Stretch"
                          ShowsPreview="True"
                          Visibility="{Binding IsShowController, Converter={StaticResource BoolToVisibilityConverter}}"
                          ResizeBehavior="PreviousAndNext" />
            <ItemsControl  Grid.Row="0" Grid.Column="2"
                           Visibility="{Binding IsShowController, Converter={StaticResource BoolToVisibilityConverter}}"
                           HorizontalAlignment="Left"  
                           Margin="5"
                           ItemsSource="{Binding Controllers}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1"  CornerRadius="3"  >
                            <!--<controllers:ControllerMainPage DataContext="{Binding}" />-->
                            <ContentControl Content="{Binding}" Margin="0,0,0,15"/>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </Grid> 
        <!-- 曲线显示部分 -->
        <Grid Grid.Row="1" Grid.Column="0" Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}">
            <Grid.CacheMode>
                <BitmapCache />
            </Grid.CacheMode>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <ItemsControl Grid.Row="0"
                          Grid.Column="0"
                          ItemsSource="{Binding CurveModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander
                            Width="450"
                            Height="Auto"  
                            BorderBrush="LightGray" 
                            Tag="{Binding DeviceId}"
                            IsExpanded="True">
                            <Expander.Background>
                                <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                            </Expander.Background>
                            <Expander.Header>
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding ExpanderHeaderName}" Margin="5,0,15,0" />
                                    <Button Content="设置曲线" 
                                            Command="{Binding DataContext.SetCurveCommand, RelativeSource={RelativeSource AncestorType=localView:TestStartingPage}}"
                                            CommandParameter="{Binding DeviceId}"> 
                                    </Button>
                                </StackPanel>
                            </Expander.Header>
                            <lvc:CartesianChart
                                Title="{Binding Title}"
                                Height="250"
                                Series="{Binding CurveSeries}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}">
                            </lvc:CartesianChart>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <!-- 进度显示 -->
            <ItemsControl Grid.Row="0"
              Grid.Column="2" 
              ItemsSource="{Binding ControlProcessExpanders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Width="450" 
                                  Height="Auto"  
                                  BorderBrush="LightGray">
                            <Expander.Background>
                                <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                            </Expander.Background>
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Tag="{Binding CommandId}" Text="{Binding CommandName}" FontSize="18" Height="Auto" />
                                        <TextBlock Text="{Binding ControlType}" Margin="5,0,20,0" FontSize="18" Height="Auto"/>
                                        <TextBlock FontSize="18" Height="Auto">
                                            执行进度:
                                            <Run FontSize="15" Text="{Binding ProgressRate}" FontWeight="Bold" Foreground="Black" />
                                            %
                                        </TextBlock>
                                    </StackPanel>
                                    <materialDesign:PackIcon Grid.Column="1" Kind="CloseCircle" />
                                </Grid>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding ControlCommandParams}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                                            <TextBlock FontWeight="Bold">
                                                <Run Text="{Binding Key}" />:<Run Text="{Binding Value}" />
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
        <!-- 进度条 -->
        <StackPanel 
            VerticalAlignment="Center" 
            Grid.Row="1" 
            Grid.Column="0"  
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Width="600" Height="10" Value="{Binding LoadingProgress.ProgressPercentage}"></ProgressBar>
            <TextBlock FontWeight="Bold"
                Margin="0 8" 
                HorizontalAlignment="Center" 
                Text="{Binding LoadingMessage}" 
                Foreground="#666666" />
        </StackPanel>
    </Grid>
</UserControl>
