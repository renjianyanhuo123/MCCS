<UserControl x:Class="MCCS.Views.Pages.TestStartingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS"
             xmlns:localView="clr-namespace:MCCS.Views.Pages"
             xmlns:behaviors="clr-namespace:MCCS.Behaviors"
             xmlns:convert="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" 
             xmlns:pages="clr-namespace:MCCS.ViewModels.Pages" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             d:DataContext="{d:DesignInstance Type=pages:TestStartingPageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             x:Name="TestStartingControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <convert:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter" />
            <convert:BoolToStyleConverter x:Key="BoolToStyleConverter" />
            <convert:BoolToTextContentConverter x:Key="BoolToTextContentConverter" /> 
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 顶部按钮区域 - 最先声明 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
            <Button
            Width="100"
            Content="{Binding IsStartedTest, Converter={StaticResource BoolToTextContentConverter}}" 
            Style="{Binding IsStartedTest, Converter={StaticResource BoolToStyleConverter}}"
            Command="{Binding StartTestCommand}"
            ToolTip="{Binding IsStartedTest, Converter={StaticResource BoolToTextContentConverter}}" />
            <Button
                Width="100"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                Content="测试移动"
                Command="{Binding TestModelMoveCommand}" />
        </StackPanel>
        <!-- 3D视窗容器 - 第二个声明（作为背景层） -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- 使用Popup实现右键菜单 -->
            <Popup x:Name="modelPopupMenu" 
                    IsOpen="{Binding IsShowContextMenu}"
                    Placement="Mouse"
                    StaysOpen="False">
                <Border Background="White" 
                        BorderBrush="Gray" 
                        BorderThickness="1"
                        CornerRadius="5">
                    <ItemsControl>
                        <MenuItem Header="位移清零" Command="{Binding DisplacementClearCommand}" />
                        <Separator/>
                        <MenuItem Header="力清零" Command="{Binding ForceClearCommand}" />
                    </ItemsControl>
                </Border>
            </Popup>
            <!-- 3D视窗  EnableSwapChainRendering="True"：是否使用GPU渲染 -->
            <hx:Viewport3DX  
                x:Name="viewport"
                Grid.Column="0"
                Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}"
                BackgroundColor="#595959"
                EffectsManager="{Binding EffectsManager}"
                Camera="{Binding Camera}" 
                IsHitTestVisible="True"
                ShowCoordinateSystem="True"
                FXAALevel="High">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown3D">
                        <b:InvokeCommandAction Command="{Binding Model3DMouseDownCommand}" PassEventArgsToCommand="True"/>
                    </b:EventTrigger>
                    <!-- 新增右键事件处理 -->
                    <b:EventTrigger EventName="MouseDown3D">
                        <b:InvokeCommandAction 
                            Command="{Binding Model3DRightMouseDownCommand}" 
                            PassEventArgsToCommand="True"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <b:Interaction.Behaviors>
                    <behaviors:MouseMoveHitTestBehavior HitTestCommand="{Binding Model3DMouseMoveCommand}" />
                </b:Interaction.Behaviors>
                <hx:Viewport3DX.InputBindings>
                    <KeyBinding Key="B" Command="hx:ViewportCommands.BackView" />
                    <KeyBinding Key="F" Command="hx:ViewportCommands.FrontView" />
                    <KeyBinding Key="U" Command="hx:ViewportCommands.TopView" />
                    <KeyBinding Key="D" Command="hx:ViewportCommands.BottomView" />
                    <KeyBinding Key="L" Command="hx:ViewportCommands.LeftView" />
                    <KeyBinding Key="R" Command="hx:ViewportCommands.RightView" />
                    <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                    <!--<MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="Alt+LeftClick" />-->
                    <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                    <!-- 移除了 LeftClick 的 Pan 命令，改为使用 Shift+LeftClick 或 Alt+LeftClick -->
                    <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="Shift+LeftClick" />
                </hx:Viewport3DX.InputBindings>
                <!-- 背景环境 -->
                <hx:EnvironmentMap3D Texture="{Binding EnvironmentMap}" />
                <!--光照-->
                <hx:AmbientLight3D Color="#414141" />
                <hx:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="#D6D6D6" />
                <!-- 绑定Billboard文本集合 -->
                <hx:TopMostGroup3D x:Name="topMostGroup" EnableTopMost="True">
                    <!--动态文本: FixedSize: 是否固定大小 Geometry: 绑定到 ViewModel 中的 BatchedText 属性 IsHitTestVisible: 是否可被鼠标事件检测到-->
                    <hx:BillboardTextModel3D
                            FixedSize="True"
                            Geometry="{Binding CollectionDataLabels}"
                            IsHitTestVisible="False" />
                </hx:TopMostGroup3D>
                <!-- 连线 -->
                <hx:LineGeometryModel3D 
                        Geometry="{Binding ConnectionLineGeometry}" 
                        Color="Blue"
                        IsHitTestVisible="False"/>
                <!--模型内容-->
                <hx:Element3DPresenter Content="{Binding GroupModel}"/>
                <hx:PostEffectMeshBorderHighlight EffectName="highlight" />
                <hx:AxisPlaneGridModel3D
                        x:Name="plane"
                        AutoSpacing="True"
                        Offset="-65" />
            </hx:Viewport3DX>
            <StackPanel  Grid.Row="0" Grid.Column="1"  
                        HorizontalAlignment="Center"
                        Margin="5">
                <ContentControl prism:RegionManager.RegionName="{x:Static local:GlobalConstant.RightFlyoutRegionName}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Loaded">
                            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ContentControl>
            </StackPanel>
        </Grid> 
        <!-- 曲线显示部分 -->
        <Grid Grid.Row="1" Grid.Column="0" Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}">
            <Grid.CacheMode>
                <BitmapCache />
            </Grid.CacheMode>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <ItemsControl Grid.Row="0"
                          Grid.Column="0"
                          ItemsSource="{Binding CurveModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander
                            Width="450"
                            Height="Auto"  
                            BorderBrush="LightGray" 
                            Tag="{Binding DeviceId}"
                            IsExpanded="True">
                            <Expander.Background>
                                <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                            </Expander.Background>
                            <Expander.Header>
                                <StackPanel VerticalAlignment="Center" Orientation="Horizontal">
                                    <TextBlock VerticalAlignment="Center" Text="{Binding ExpanderHeaderName}" Margin="5,0,15,0" />
                                    <Button Content="设置曲线" 
                                            Command="{Binding DataContext.SetCurveCommand, RelativeSource={RelativeSource AncestorType=localView:TestStartingPage}}"
                                            CommandParameter="{Binding DeviceId}">
                                        <!--<Button.CommandParameter>
                                            <StackPanel>
                                                <TextBlock Text="{Binding DeviceId}" Visibility="Collapsed" />
                                                <TextBox></TextBox>
                                            </StackPanel>
                                        </Button.CommandParameter>-->
                                    </Button>
                                </StackPanel>
                            </Expander.Header>
                            <lvc:CartesianChart
                                Title="{Binding Title}"
                                Height="250"
                                Series="{Binding CurveSeries}"
                                XAxes="{Binding XAxes}"
                                YAxes="{Binding YAxes}">
                            </lvc:CartesianChart>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
            <ItemsControl Grid.Row="0"
              Grid.Column="2" 
              ItemsSource="{Binding ControlProcessExpanders}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander Width="450" 
                                  Height="Auto"  
                                  BorderBrush="LightGray">
                            <Expander.Background>
                                <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                            </Expander.Background>
                            <Expander.Header>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Tag="{Binding CommandId}" Text="{Binding CommandName}" FontSize="18" Height="Auto" />
                                        <TextBlock Text="{Binding ControlType}" Margin="5,0,20,0" FontSize="18" Height="Auto"/>
                                        <TextBlock FontSize="18" Height="Auto">
                                            执行进度:
                                            <Run FontSize="15" Text="{Binding ProgressRate}" FontWeight="Bold" Foreground="White">  
                                            </Run>
                                            %
                                        </TextBlock>
                                    </StackPanel>
                                    <materialDesign:PackIcon Grid.Column="1" Kind="CloseCircle" />
                                </Grid>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding ControlCommandParams}">
                                <ItemsControl.ItemTemplate>
                                    <DataTemplate>
                                        <Border BorderBrush="Gray" BorderThickness="1" Padding="5" Margin="5">
                                            <TextBlock FontWeight="Bold">
                                                <Run Text="{Binding Key}" />:<Run Text="{Binding Value}" />
                                            </TextBlock>
                                        </Border>
                                    </DataTemplate>
                                </ItemsControl.ItemTemplate>
                                <ItemsControl.ItemsPanel>
                                    <ItemsPanelTemplate>
                                        <WrapPanel Orientation="Vertical" />
                                    </ItemsPanelTemplate>
                                </ItemsControl.ItemsPanel>
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </Grid>
        <!-- 进度条 -->
        <StackPanel 
        VerticalAlignment="Center" 
        Grid.Row="1" 
        Grid.Column="0"  
        Orientation="Vertical" 
        HorizontalAlignment="Center"
        Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Width="600" Height="10" Value="{Binding LoadingProgress.ProgressPercentage}"></ProgressBar>
            <TextBlock FontWeight="Bold"
           Margin="0 8" 
           HorizontalAlignment="Center" 
           Text="{Binding LoadingMessage}" 
           Foreground="#666666" />
        </StackPanel>
    </Grid>
</UserControl>
