<UserControl x:Class="MCCS.Views.Pages.TestStartingPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS"
             xmlns:behaviors="clr-namespace:MCCS.Behaviors"
             xmlns:convert="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:hx="http://helix-toolkit.org/wpf/SharpDX"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:pages="clr-namespace:MCCS.ViewModels.Pages" 
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
             d:DataContext="{d:DesignInstance Type=pages:TestStartingPageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
        <convert:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter" />
        <convert:BoolToStyleConverter x:Key="BoolToStyleConverter" />
        <convert:BoolToTextContentConverter x:Key="BoolToTextContentConverter" />
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <!-- 顶部按钮区域 - 最先声明 -->
        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" Margin="5">
            <Button
            Width="100"
            Content="{Binding IsStartedTest, Converter={StaticResource BoolToTextContentConverter}}" 
            Style="{Binding IsStartedTest, Converter={StaticResource BoolToStyleConverter}}"
            Command="{Binding StartTestCommand}"
            ToolTip="{Binding IsStartedTest, Converter={StaticResource BoolToTextContentConverter}}" />
            <Button
                Width="100"
                Style="{StaticResource MaterialDesignRaisedLightButton}"
                Content="测试移动"
                Command="{Binding TestModelMoveCommand}" />
        </StackPanel>
        <!-- 3D视窗容器 - 第二个声明（作为背景层） -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            <!-- 3D视窗  EnableSwapChainRendering="True"：是否使用GPU渲染 -->
            <hx:Viewport3DX  
                x:Name="viewport"
                Grid.Column="0"
                Visibility="{Binding IsLoading, Converter={StaticResource InverseBoolToVisibleConverter}}"
                BackgroundColor="#595959"
                EffectsManager="{Binding EffectsManager}"
                Camera="{Binding Camera}" 
                IsHitTestVisible="True"
                ShowCoordinateSystem="True"
                FXAALevel="High">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown3D">
                        <b:InvokeCommandAction Command="{Binding Model3DMouseDownCommand}" PassEventArgsToCommand="True"/>
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <b:Interaction.Behaviors>
                    <behaviors:MouseMoveHitTestBehavior HitTestCommand="{Binding Model3DMouseMoveCommand}" />
                </b:Interaction.Behaviors>
                <hx:Viewport3DX.InputBindings>
                    <KeyBinding Key="B" Command="hx:ViewportCommands.BackView" />
                    <KeyBinding Key="F" Command="hx:ViewportCommands.FrontView" />
                    <KeyBinding Key="U" Command="hx:ViewportCommands.TopView" />
                    <KeyBinding Key="D" Command="hx:ViewportCommands.BottomView" />
                    <KeyBinding Key="L" Command="hx:ViewportCommands.LeftView" />
                    <KeyBinding Key="R" Command="hx:ViewportCommands.RightView" />
                    <KeyBinding Command="hx:ViewportCommands.ZoomExtents" Gesture="Control+E" />
                    <MouseBinding Command="hx:ViewportCommands.Rotate" Gesture="RightClick" />
                    <MouseBinding Command="hx:ViewportCommands.Zoom" Gesture="MiddleClick" />
                    <!-- 移除了 LeftClick 的 Pan 命令，改为使用 Shift+LeftClick 或 Alt+LeftClick -->
                    <MouseBinding Command="hx:ViewportCommands.Pan" Gesture="Shift+LeftClick" />
                </hx:Viewport3DX.InputBindings>
                <!--光照-->
                <hx:AmbientLight3D Color="#414141" />
                <hx:DirectionalLight3D Direction="{Binding Camera.LookDirection}" Color="#D6D6D6" />
                <!-- 绑定Billboard文本集合 -->
                <hx:TopMostGroup3D x:Name="topMostGroup" EnableTopMost="True">
                    <!--动态文本: FixedSize: 是否固定大小 Geometry: 绑定到 ViewModel 中的 BatchedText 属性 IsHitTestVisible: 是否可被鼠标事件检测到-->
                    <hx:BillboardTextModel3D
                            FixedSize="True"
                            Geometry="{Binding CollectionDataLabels}"
                            IsHitTestVisible="False" />
                </hx:TopMostGroup3D>
                <!-- 连线 -->
                <hx:LineGeometryModel3D 
                        Geometry="{Binding ConnectionLineGeometry}" 
                        Color="Blue"
                        IsHitTestVisible="False"/>
                <!--模型内容-->
                <hx:Element3DPresenter Content="{Binding GroupModel}"/>
                <hx:PostEffectMeshBorderHighlight EffectName="highlight" />
                <hx:AxisPlaneGridModel3D
                        x:Name="plane"
                        AutoSpacing="True"
                         
                        Offset="-65" />
            </hx:Viewport3DX>
            <StackPanel  Grid.Row="1" Grid.Column="1"  
                        HorizontalAlignment="Center"
                        Margin="5">
                <ContentControl Grid.Row="1" prism:RegionManager.RegionName="{x:Static local:GlobalConstant.RightFlyoutRegionName}">
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="Loaded">
                            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                </ContentControl>
            </StackPanel>
        </Grid>
        <!-- 进度条 -->
        <StackPanel 
            VerticalAlignment="Center" 
            Grid.Row="1" 
            Grid.Column="0" 
            ZIndex="3"
            Orientation="Vertical" 
            HorizontalAlignment="Center"
            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
            <ProgressBar Width="600" Height="10" Value="{Binding LoadingProgress.ProgressPercentage}"></ProgressBar>
            <TextBlock FontWeight="Bold"
               Margin="0 8" 
               HorizontalAlignment="Center" 
               Text="{Binding LoadingMessage}" 
               Foreground="#666666" />
        </StackPanel>
        <!-- 曲线显示部分 -->
        <Grid Grid.Row="1" Grid.Column="0">
            <Grid.CacheMode>
                <BitmapCache />
            </Grid.CacheMode>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="300" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Row="1"
                        Grid.Column="0">
                <Expander
                    x:Name="Curve1"
                    Width="450"
                    Height="Auto"  
                    BorderBrush="LightGray" 
                    Header="曲线一(通道一力)"
                    IsExpanded="True">
                    <Expander.Background>
                        <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                    </Expander.Background>
                    <lvc:CartesianChart
                        Title="{Binding Title}"
                        Height="250"
                        Series="{Binding CurveSeries1}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}">
                    </lvc:CartesianChart>
                </Expander>
                <Expander
                    x:Name="Curve2"
                    Width="450"
                    Height="Auto" 
                    BorderBrush="LightGray" 
                    Header="曲线二(通道二力)"
                    IsExpanded="True">  
                    <Expander.Background>
                        <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                    </Expander.Background>
                    <lvc:CartesianChart
                        Title="{Binding Title}"
                        Height="250"
                        Series="{Binding CurveSeries2}"
                        XAxes="{Binding XAxes}"
                        YAxes="{Binding YAxes}">
                    </lvc:CartesianChart>
                </Expander>
            </StackPanel>
            <StackPanel Grid.Row="1"
                        Grid.Column="2">
                <ItemsControl  >
                    
                </ItemsControl>
                <Expander Width="450"
                          Height="Auto"  
                          BorderBrush="LightGray">
                    <Expander.Background>
                        <SolidColorBrush Opacity="0.25" Color="WhiteSmoke" />
                    </Expander.Background>
                    <Expander.Header>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" /> 
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                                <TextBlock Text="作动器一" Height="Auto" />
                                <TextBlock Text="组合控制" Margin="0,0,20,0"  Height="Auto"/>
                                <TextBlock Height="Auto">
                                    执行进度:
                                    <Run FontSize="15" FontWeight="Bold" Foreground="White">
                                        45%
                                    </Run>
                                </TextBlock>
                            </StackPanel>
                            <materialDesign:PackIcon Grid.Column="1" Kind="CloseCircle" />
                        </Grid>
                    </Expander.Header>
                </Expander>
            </StackPanel>
        </Grid>
    </Grid>
</UserControl>
