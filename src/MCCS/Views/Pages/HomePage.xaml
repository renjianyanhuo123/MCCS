<UserControl x:Class="MCCS.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convert="clr-namespace:MCCS.Converters"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:pages="clr-namespace:MCCS.ViewModels.Pages" d:DataContext="{d:DesignInstance Type=pages:HomePageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources> 
        <!--<convert:TestStatusConverter x:Key="TestStatusConverter"/>
        <convert:TestOperationConverter x:Key="TestOperationConverter"/>-->
        <Style x:Key="ChangeBorderStyle" TargetType="Border">
            <Setter Property="Width" Value="600" />
            <Setter Property="Height" Value="800" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Cursor" Value="Hand" />
            <Setter Property="Background" Value="#dbdbdb" />
            <Setter Property="Margin" Value="40" />
            <Setter Property="RenderTransformOrigin" Value="0.5,0.5" />
            <Setter Property="BorderBrush" Value="Transparent" />
            <Setter Property="BorderThickness" Value="2" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <!-- 静态效果 -->
                    <Setter Property="BorderBrush" Value="DodgerBlue"/>
                    <Setter Property="Effect">
                        <Setter.Value>
                            <DropShadowEffect Color="DodgerBlue" 
                                              BlurRadius="15" 
                                              ShadowDepth="3" 
                                              Opacity="0.6"/>
                        </Setter.Value>
                    </Setter>

                    <!-- 动画效果 -->
                    <Trigger.EnterActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                                 To="1.03" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                                 To="1.03" Duration="0:0:0.15"/>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                To="LightGray" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.EnterActions>
                    <Trigger.ExitActions>
                        <BeginStoryboard>
                            <Storyboard>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleX" 
                                                 To="1.0" Duration="0:0:0.15"/>
                                <DoubleAnimation Storyboard.TargetProperty="RenderTransform.ScaleY" 
                                                 To="1.0" Duration="0:0:0.15"/>
                                <ColorAnimation Storyboard.TargetProperty="Background.Color" 
                                                To="#dbdbdb" Duration="0:0:0.15"/>
                            </Storyboard>
                        </BeginStoryboard>
                    </Trigger.ExitActions>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
