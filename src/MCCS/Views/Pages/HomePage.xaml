    <Grid>
        <!-- 主内容区域 -->
        <UniformGrid Columns="2" VerticalAlignment="Center" 
                     HorizontalAlignment="Center"
                     Background="Transparent"> 
            <!-- 左侧卡片：测试 -->
            <Border x:Name="LeftCard" Style="{StaticResource ChangeBorderStyle}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown">
                        <b:InvokeCommandAction Command="{Binding JumpToProjectCommand}" />
                    </b:EventTrigger> 
                </b:Interaction.Triggers>
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform> 
                <StackPanel> 
                    <Border Width="600" Height="600" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Image Source="/Resources/mainpagetest.png" 
                               Stretch="Fill"
                               Width="256" Height="256" />
                    </Border>
                    <TextBlock Text="测试" FontSize="24"
                               Foreground="#1296db"
                               Width="Auto" Margin="30,15,0,15" />
                    <TextBlock Text="创建新的样品并开始试验或者继续使用现有试样" FontSize="18" 
                               Foreground="#515151"
                               Width="Auto" Margin="30,15,0,15" />
                </StackPanel>
            </Border> 
            <!-- 右侧卡片：方法 -->
            <Border x:Name="RightCard" Style="{StaticResource ChangeBorderStyle}">
                <b:Interaction.Triggers>
                    <b:EventTrigger EventName="MouseDown">
                        <b:InvokeCommandAction Command="{Binding JumpToMethodCommand}" />
                    </b:EventTrigger>
                </b:Interaction.Triggers>
                <Border.RenderTransform>
                    <ScaleTransform ScaleX="1" ScaleY="1"/>
                </Border.RenderTransform>
                <StackPanel>
                    <Border Width="600" Height="600" 
                            VerticalAlignment="Center"
                            HorizontalAlignment="Center">
                        <Image Source="/Resources/mainpagemethod.png" 
                               Stretch="Fill"
                               Width="256" Height="256" />
                    </Border>
                    <TextBlock Text="方法" FontSize="24"
                               Foreground="#1296db"
                               Width="Auto" Margin="30,15,0,15" />
                    <TextBlock Text="编辑试验方法并创建新方法" FontSize="18" 
                               Foreground="#515151"
                               Width="Auto" Margin="30,15,0,15" />
                </StackPanel>
            </Border>
        </UniformGrid>
    </Grid>
