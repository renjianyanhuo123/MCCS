<UserControl x:Class="MCCS.Views.Pages.HomePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:convert="clr-namespace:MCCS.Converters"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- TestOperationConverter-->
        <convert:TestStatusConverter x:Key="TestStatusConverter"/>
        <convert:TestOperationConverter x:Key="TestOperationConverter"/>
    </UserControl.Resources>
    <GroupBox
        Width="Auto"
        materialDesign:ColorZoneAssist.Mode="Light"
        Style="{StaticResource MaterialDesignCardGroupBox}">
        <GroupBox.HeaderTemplate>
            <DataTemplate>
                <StackPanel Orientation="Horizontal">
                    <TextBox
                        Height="Auto"
                        VerticalAlignment="Top"
                        materialDesign:HintAssist.Hint="{DynamicResource SearchName}"
                        AcceptsReturn="True" 
                        Style="{StaticResource MaterialDesignOutlinedTextBox}"
                        TextWrapping="Wrap"
                        VerticalScrollBarVisibility="Auto" />
                </StackPanel>
            </DataTemplate>
        </GroupBox.HeaderTemplate>
        <DataGrid x:Name="AzureDataGrid"
                  HeadersVisibility="All"
                 AutoGenerateColumns="False"
                 Height="Auto"
                 CanUserAddRows="False"
                 ItemsSource="{Binding TestList}"
                 HorizontalScrollBarVisibility="Auto"
                 VerticalScrollBarVisibility="Auto"
                 RowHeaderWidth="0" >
            <DataGrid.Columns>
                <!--Binding="{Binding Title}"-->
                <DataGridTextColumn Binding="{Binding Code}" Header="{DynamicResource TestCode}" />
                <DataGridTextColumn Binding="{Binding Name}" Header="{DynamicResource TestName}" />
                <DataGridTextColumn Binding="{Binding Standard}" Header="{DynamicResource TestStandard}" />
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding Person}" Header="{DynamicResource TestPerson}" />
                <DataGridTextColumn Binding="{Binding Remark}" Header="{DynamicResource TestRemark}" />
                <DataGridTextColumn Binding="{Binding FilePath}" Header="{DynamicResource TestFilePath}" />
                <DataGridTemplateColumn IsReadOnly="True" Header="{DynamicResource TestStatus}">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Button
                                ToolTip="{Binding Status}"
                                Background="{Binding Status, Converter={StaticResource TestStatusConverter}}"
                                Style="{StaticResource MaterialDesignFloatingActionMiniLightButton}"
                                Command="{Binding DataContext.TestOperationCommand, RelativeSource={RelativeSource AncestorType=local:HomePage}}"
                                CommandParameter="{Binding}">
                                <materialDesign:PackIcon Kind="{Binding Status, Converter={StaticResource TestOperationConverter}}" />
                            </Button>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding StartTime}" Header="{DynamicResource TestStartTime}" />
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding EndTime}" Header="{DynamicResource TestEndTime}" />
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding ProcessingStr}" Header="{DynamicResource TestProcessing}" >
                </DataGridTextColumn>
                <DataGridTextColumn IsReadOnly="True" Binding="{Binding CreateTime}" Header="{DynamicResource TestCreateTime}" />
            </DataGrid.Columns>
        </DataGrid>
    </GroupBox>
</UserControl>
