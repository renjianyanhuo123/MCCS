<UserControl x:Class="MCCS.Views.Pages.Controllers.ControllerMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS"
             xmlns:convert="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/" 
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:controllers="clr-namespace:MCCS.ViewModels.Pages.Controllers" 
             d:DataContext="{d:DesignInstance Type=controllers:ControllerMainPageViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries>
            <convert:BoolToWidthConverter x:Key="BoolToWidthConverter" />
            <convert:EnumToBooleanConverter x:Key="EnumToBooleanConverter" />
            <convert:EnumToVisibilityConverter x:Key="EnumToVisibilityConverter" />
            <convert:CommandStatusToEnableConverter x:Key="CommandStatusToEnableConverter" />
            <Thickness x:Key="GroupMargin">5,0,5,8</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Width="{Binding IsShowController, Converter={StaticResource BoolToWidthConverter}}" Height="900">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <ScrollViewer Grid.Column="0" VerticalScrollBarVisibility="Auto" Grid.IsSharedSizeScope="True">
            <StackPanel>
                <TextBlock
                    Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                    Margin="0,5,0,10"
                    Text="{Binding CurrentChannelName, Mode=TwoWay}" />
                <CheckBox 
                Margin="5 5 5 8"
                Tag="{Binding CurrentChannelId}"
                IsChecked="{Binding IsParticipateControl, Mode=TwoWay}"
                Content="{StaticResource IsParticipateControl}"
                Style="{StaticResource MaterialDesignCheckBox}"
                Command="{Binding ParticipateControlCommand}"
                CommandParameter="{Binding Tag, RelativeSource={RelativeSource Self}}"/>
                <GroupBox  
                    Margin="{StaticResource GroupMargin}" 
                    Style="{StaticResource MaterialDesignCardGroupBox}"
                    Header="{StaticResource ControlTypeText}">
                    <StackPanel>
                        <WrapPanel Margin="0 0 0 10">
                            <RadioButton Content="组合控制" IsChecked="{Binding ControlType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Combine}"
                                    Style="{StaticResource MaterialDesignRadioButton}" 
                                    Command="{Binding ControlTypeChangedCommand}"
                                    CommandParameter="Combine"
                                    GroupName="ComtrolTypeGroup" Margin="0 0 10 0" />
                            <RadioButton Content="单个控制" IsChecked="{Binding ControlType, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter=Single}"
                                    Style="{StaticResource MaterialDesignRadioButton}"
                                    Command="{Binding ControlTypeChangedCommand}"
                                    CommandParameter="Single"
                                    GroupName="ComtrolTypeGroup" />
                        </WrapPanel>
                        <ComboBox Margin="0,0,0,10"
                                    materialDesign:HintAssist.Hint="请选择加入的组合(未选择默认为新组合)" 
                                    ItemsSource="{Binding ControlCombineInfos}"
                                    SelectedItem="{Binding SelectedControlCombineInfo}"
                                    DisplayMemberPath="CombineChannelName"
                                    SelectedValuePath="CombineChannelId">
                            <i:Interaction.Triggers>
                                <i:EventTrigger EventName="SelectionChanged">
                                    <i:InvokeCommandAction Command="{Binding ControlCombineSelectionChangedCommand}"/>
                                </i:EventTrigger>
                            </i:Interaction.Triggers>
                            <ComboBox.Visibility>
                                <MultiBinding Converter="{StaticResource EnumToVisibilityConverter}"
                                              ConverterParameter="ComboBox">
                                    <Binding Path="SelectedControlCombineInfo" />
                                    <Binding Path="ControlType" />
                                </MultiBinding>
                            </ComboBox.Visibility>
                        </ComboBox>
                        <TextBox x:Name="CombineName" 
                                materialDesign:HintAssist.Hint="请填入组合控制名称"
                                Text="{Binding CurrentCombineName, Mode=TwoWay}" >
                            <TextBox.Visibility>
                                <MultiBinding
                                    Converter="{StaticResource EnumToVisibilityConverter}"
                                    ConverterParameter="TextBox">
                                    <Binding Path="SelectedControlCombineInfo" />
                                    <Binding Path="ControlType" />
                                </MultiBinding>
                            </TextBox.Visibility>
                        </TextBox>
                    </StackPanel>
                </GroupBox>
                <GroupBox  
                    Margin="{StaticResource GroupMargin}"
                    Header="{StaticResource ControllerStep1}"
                    Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ItemsControl Name="ChannelItem" ItemsSource="{Binding Channels}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Chip
                                    Content="{Binding ChannelName}"
                                    Tag="{Binding ChannelId}"
                                    Icon="{Binding Index}"
                                    IconBackground="{DynamicResource PrimaryHueLightBrush}"
                                    IconForeground="{DynamicResource PrimaryHueLightForegroundBrush}"
                                    IsDeletable="True" />
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </GroupBox>
                <GroupBox 
                    Margin="{StaticResource GroupMargin}"
                    Header="{StaticResource ControllerStep2}"
                    Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ComboBox 
                        materialDesign:HintAssist.Hint="{StaticResource ControllerMethodHelpText}"
                        Style="{StaticResource MaterialDesignFilledComboBox}"
                        SelectedIndex="{Binding SelectedControlMode}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <i:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </i:EventTrigger>
                            <i:EventTrigger EventName="Loaded">
                                <i:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                        <ComboBoxItem Content="手动控制" />
                        <ComboBoxItem Content="静态控制" />
                        <ComboBoxItem Content="程序控制" />
                        <ComboBoxItem Content="疲劳控制" />
                    </ComboBox>
                </GroupBox>
                <GroupBox  
                    Margin="{StaticResource GroupMargin}"
                    Header="{StaticResource ControllerStep3}"
                    Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ContentControl prism:RegionManager.RegionName="{x:Static local:GlobalConstant.ControlCommandRegionName}" />
                </GroupBox>
                <UniformGrid Columns="2" Margin="0 20 0 0">
                    <Button 
                        Content="应用" 
                        IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Apply}"
                        Width="80"
                        Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}"
                        ToolTip="MaterialDesignFlatSecondaryDarkBgButton" 
                        Command="{Binding ApplyCommand}"/>
                    <Button  
                        Content="暂停"
                        IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Stop}"
                        Width="80"
                        Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}" />
                </UniformGrid>
            </StackPanel> 
        </ScrollViewer>
    </Grid>
</UserControl>
