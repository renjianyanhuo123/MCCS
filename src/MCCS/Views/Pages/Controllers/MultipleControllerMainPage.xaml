<UserControl x:Class="MCCS.Views.Pages.Controllers.MultipleControllerMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.Controllers"
             xmlns:localViewModel="clr-namespace:MCCS.ViewModels.Pages.Controllers"
             xmlns:testStarting="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:controlCommand="clr-namespace:MCCS.Converters.ControlCommand"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=localViewModel:MultipleControllerMainPageViewModel}">
    <UserControl.Resources>
        <ResourceDictionary> 
            <controlCommand:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <testStarting:CommandStatusToEnableConverter x:Key="CommandStatusToEnableConverter" />
            <Thickness x:Key="GroupMargin">5,0,5,8</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid Height="500">
       <Grid.RowDefinitions>
           <RowDefinition Height="Auto"></RowDefinition>
           <RowDefinition Height="Auto"></RowDefinition>
           <RowDefinition Height="*"></RowDefinition>
           <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions>
        <Button
            Grid.Row="0"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            ToolTip="UnLock">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="LinkOff" Margin="0,0,5,0"/>
                <TextBlock Text="解锁" VerticalAlignment="Center"/>
            </StackPanel>
        </Button>
        <ComboBox Grid.Row="1" 
                  materialDesign:HintAssist.Hint="选择组合控制方式"
                  Style="{StaticResource MaterialDesignFilledComboBox}">
            <ComboBoxItem Content="跟随控制" />
            <ComboBoxItem Content="同步控制" />
            <ComboBoxItem Content="异步控制" />
        </ComboBox>
        <ItemsControl Grid.Row="2"
                      ItemsSource="{Binding Children}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:MultipleControllerChildPage DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <UniformGrid Grid.Row="3" Columns="2" Margin="0 15 0 10">
            <Button 
                Content="应用" 
                IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Apply}"
                Width="80"
                Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}"
                ToolTip="MaterialDesignFlatSecondaryDarkBgButton" 
                Command="{Binding ApplyCommand}"/>
            <Button  
                Content="暂停"
                IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Stop}"
                Width="80"
                Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}"
                Command="{Binding StopCommand}"/>
        </UniformGrid>
    </Grid>
</UserControl>
