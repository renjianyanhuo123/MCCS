<UserControl x:Class="MCCS.Views.Pages.Controllers.MultipleControllerChildPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.Controllers"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:testStarting="clr-namespace:MCCS.Converters.TestStarting"
             xmlns:controlCommand="clr-namespace:MCCS.Converters.ControlCommand" 
             xmlns:controllers="clr-namespace:MCCS.ViewModels.Pages.Controllers" 
             d:DataContext="{d:DesignInstance Type=controllers:MultipleControllerChildPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Card.xaml" />
            </ResourceDictionary.MergedDictionaries> 
            <controlCommand:BooleanToColorConverter x:Key="BooleanToColorConverter" />
            <testStarting:CommandStatusToEnableConverter x:Key="CommandStatusToEnableConverter" />
            <Thickness x:Key="GroupMargin">5,0,5,8</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid> 
        <ScrollViewer Grid.Row="0" VerticalScrollBarVisibility="Auto" Grid.IsSharedSizeScope="True">
            <StackPanel>
                <TextBlock IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Apply}"
                Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                Margin="0,5,0,10"
                Text="{Binding CurrentChannelName, Mode=TwoWay}" Cursor="" /> 
                <GroupBox IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Apply}"
                Margin="{StaticResource GroupMargin}"
                Header="{StaticResource ControllerStep2}"
                Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ComboBox 
                    materialDesign:HintAssist.Hint="{StaticResource ControllerMethodHelpText}"
                    Style="{StaticResource MaterialDesignFilledComboBox}"
                    SelectedIndex="{Binding SelectedControlMode}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="SelectionChanged">
                                <b:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="Loaded">
                                <b:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                        <ComboBoxItem Content="手动控制" />
                        <ComboBoxItem Content="静态控制" />
                        <ComboBoxItem Content="程序控制" />
                        <ComboBoxItem Content="疲劳控制" />
                    </ComboBox>
                </GroupBox>
                <GroupBox IsEnabled="{Binding CurrentCommandStatus, Converter={StaticResource CommandStatusToEnableConverter}, ConverterParameter=Apply}" 
                Margin="{StaticResource GroupMargin}"
                Header="{StaticResource ControllerStep3}"
                Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ContentControl Content="{Binding CurrentPage}" />
                </GroupBox>
            </StackPanel>
        </ScrollViewer> 
    </Grid>
</UserControl>
