<UserControl x:Class="MCCS.Views.Pages.StationSites.StationSiteHardwarePage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.StationSites"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:localDeviceStatus="clr-namespace:MCCS.Core.Models.Devices;assembly=MCCS.Core"
             mc:Ignorable="d" 
             xmlns:stationViewModel="clr-namespace:MCCS.ViewModels.Pages.StationSites"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance stationViewModel:StationSiteHardwarePageViewModel}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <UserControl.Resources>
        <!-- 状态指示灯样式 -->
        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="20"/>
            <Setter Property="Height" Value="20"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
        </Style>
        <!-- 定义公共的Border样式 -->
        <Style x:Key="AlternatingRowBorderStyle" TargetType="Border">
            <!-- 默认背景色 -->
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="Padding" Value="8"/>

            <Style.Triggers>
                <!-- 鼠标悬停效果 -->
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </Trigger>

                <!-- 偶数行背景色 -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}" Value="0">
                    <Setter Property="Background" Value="White"/>
                </DataTrigger>

                <!-- 奇数行背景色 -->
                <DataTrigger Binding="{Binding RelativeSource={RelativeSource AncestorType=ContentPresenter}, Path=(ItemsControl.AlternationIndex)}" Value="1">
                    <Setter Property="Background" Value="#F8F9FA"/>
                </DataTrigger>

                <!-- 鼠标悬停时的优先级设置 -->
                <MultiTrigger>
                    <MultiTrigger.Conditions>
                        <Condition Property="IsMouseOver" Value="True"/>
                    </MultiTrigger.Conditions>
                    <Setter Property="Background" Value="#E3F2FD"/>
                    <Setter Property="BorderBrush" Value="#2196F3"/>
                    <Setter Property="BorderThickness" Value="1"/>
                </MultiTrigger>
            </Style.Triggers>
        </Style>
        <!-- 定义选中的硬件数据模板 -->
        <DataTemplate x:Key="HardwareItemTemplate">
            <Border Style="{StaticResource AlternatingRowBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>

                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Text="{Binding HardwareName}"></TextBlock>
                    <TextBlock Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Center" Text="{Binding ControllerName}"></TextBlock>
                    <materialDesign:PackIcon 
                        Grid.Column="2" 
                        Width="24"
                        Height="24"
                        Kind="DeleteForever" 
                        Tag="{Binding HardwareId}" 
                        Cursor="Hand">
                        <materialDesign:PackIcon.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                      Command="{Binding DataContext.DeleteHardwareCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding HardwareId}"/>
                        </materialDesign:PackIcon.InputBindings>
                    </materialDesign:PackIcon>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- 定义待选的硬件数据模板列表 -->
        <DataTemplate x:Key="HardwareSelectedItemTemplate">
            <Border Style="{StaticResource AlternatingRowBorderStyle}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <CheckBox
                    Content="{Binding HardwareName}"
                    Tag="{Binding HardwareId}"
                    IsChecked="{Binding IsSelected}"
                    IsEnabled="{Binding IsSelectable}"
                    Style="{StaticResource MaterialDesignDarkCheckBox}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="Checked">
                                <b:InvokeCommandAction Command="{Binding DataContext.CheckedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                                   CommandParameter="{Binding HardwareId}"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </CheckBox>
                    <Ellipse Grid.Column="1">
                        <Ellipse.Style>
                            <Style TargetType="Ellipse" BasedOn="{StaticResource StatusIndicatorStyle}">
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding DeviceStatus}" Value="{x:Static localDeviceStatus:DeviceStatusEnum.Connected}">
                                        <Setter Property="Fill" Value="#90EE90"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DeviceStatus}" Value="{x:Static localDeviceStatus:DeviceStatusEnum.Busy}">
                                        <Setter Property="Fill" Value="#FFA500"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DeviceStatus}" Value="{x:Static localDeviceStatus:DeviceStatusEnum.Error}">
                                        <Setter Property="Fill" Value="#FF6B6B"/>
                                    </DataTrigger>
                                    <DataTrigger Binding="{Binding DeviceStatus}" Value="{x:Static localDeviceStatus:DeviceStatusEnum.Disconnected}">
                                        <Setter Property="Fill" Value="#808080"/>
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </Ellipse.Style>
                    </Ellipse>
                </Grid>
            </Border>
        </DataTemplate>
        <!-- 定义ItemsControl的样式 -->
        <Style x:Key="ListViewStyle" TargetType="ItemsControl">
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
            <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
            <Setter Property="AlternationCount" Value="2"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ItemsControl">
                        <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            CornerRadius="5"
                            BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer Focusable="False">
                                <ItemsPresenter/>
                            </ScrollViewer>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"></ColumnDefinition>
            <ColumnDefinition Width="1*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <ItemsControl Grid.Column="0"
                      ItemsSource="{Binding StationSiteHardwareItems}"
                      Style="{StaticResource ListViewStyle}"
                      ItemTemplate="{StaticResource HardwareItemTemplate}"
                      Margin="5">
            <!-- 自定义ItemsPanel使用VirtualizingStackPanel提高性能 -->
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel Orientation="Vertical"/>
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>

        <StackPanel Grid.Column="1">
            <ItemsControl ItemsSource="{Binding HardwareListItems}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Expander>
                            <Expander.Header>
                                <TextBlock Text="{Binding ControllerName}" FontSize="24" FontWeight="Bold" Margin="15,0,0,0"  VerticalAlignment="Center"/>
                            </Expander.Header>
                            <ItemsControl ItemsSource="{Binding ChildItems}"
                                          ItemTemplate="{StaticResource HardwareSelectedItemTemplate}">
                            </ItemsControl>
                        </Expander>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </StackPanel>
    </Grid>
</UserControl>
