<UserControl x:Class="MCCS.Views.Pages.StationSites.StationSiteControlChannelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.StationSites"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors" xmlns:stationsites="clr-namespace:MCCS.ViewModels.Pages.StationSites"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controlChannels="clr-namespace:MCCS.Converters.ControlChannels"
             d:DataContext="{d:DesignInstance Type=stationsites:StationSiteControlChannelPageViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <controlChannels:EnumToStringConverter x:Key="EnumToStringConverter" /> 
        <!-- Border的样式 -->
        <Style x:Key="ControlChannelBorderStyle" TargetType="Border">
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Background" Value="#F9FAFB"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="Auto"/>
            <Setter Property="Height" Value="60"/>
            <Setter Property="Cursor" Value="Hand"/> 
        </Style>  
         
    </UserControl.Resources>
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions> 
        <StackPanel Grid.Row="0" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Right"
                    Margin="0,0,15,0">
            <Button
                Width="200"
                Content="添加位移/力闭环控制通道" 
                Command="{Binding AddControlChannelCommand}"
                Style="{StaticResource MaterialDesignFlatMidBgButton}" />
        </StackPanel>
        <ScrollViewer Grid.Row="1">
            <ItemsControl  Background="#F1F1F1" 
                          ItemsSource="{Binding ControlChannels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Width="Auto" Height="250">
                            <Border.Style>
                                <StaticResource ResourceKey="ControlChannelBorderStyle"/>
                            </Border.Style>
                            <Grid Margin="10"> 
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0" >
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBlock Grid.Column="0" VerticalAlignment="Center" Margin="15,0,0,0" Text="{Binding ChannelName}"
                                               FontSize="18" FontWeight="Bold"></TextBlock>
                                    <Viewbox Grid.Column="1" Height="24" Width="24">
                                        <materialDesign:PackIcon Kind="SquareEditOutline" Foreground="Blue" />
                                    </Viewbox>
                                    <Viewbox Grid.Column="2" Height="24" Width="24" Margin="15,0,0,0">
                                        <materialDesign:PackIcon Kind="DeleteForever" Foreground="Red" />
                                    </Viewbox> 
                                </Grid> 
                                <UniformGrid Grid.Row="1" Columns="2" Margin="10">
                                    <StackPanel Orientation="Horizontal"  >
                                        <TextBlock Text="控制模式："  FontSize="14" />
                                        <TextBlock Foreground="Gray" FontSize="14" Text="{Binding ControlMode, Converter={StaticResource EnumToStringConverter}}" />
                                    </StackPanel>
                                </UniformGrid>
                                <StackPanel Grid.Row="2" Margin="0,15,0,0">
                                    <TextBlock Text="反馈信号" FontSize="16" FontWeight="Bold" />
                                    <Border CornerRadius="3" Background="#A855F7" Height="30" Margin="0,10,0,0">
                                        <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                                            <TextBlock Foreground="White" FontSize="12" Text="控制器1"></TextBlock>
                                            <TextBlock Foreground="White" FontSize="12" Text="信号接口1"></TextBlock>
                                            <materialDesign:PackIcon Kind="Link" Foreground="White" />
                                            <TextBlock  Foreground="White" FontSize="12" Text="设备1"></TextBlock>
                                        </StackPanel>
                                    </Border>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Vertical" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>
    </Grid>
</UserControl>
