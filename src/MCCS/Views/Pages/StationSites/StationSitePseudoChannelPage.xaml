<UserControl x:Class="MCCS.Views.Pages.StationSites.StationSitePseudoChannelPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MCCS.Views.Pages.StationSites"
             xmlns:localViewModel="clr-namespace:MCCS.ViewModels.Pages.StationSites"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance localViewModel:StationSitePseudoChannelPageViewModel}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" HorizontalAlignment="Left" Margin="15,0,0,0" VerticalAlignment="Center">
            <Button Content="新增虚拟通道" Width="120" Command="{Binding AddPseudoChannelCommand}"></Button>
        </StackPanel>
        <DataGrid
    Grid.Row="1"
    CanUserAddRows="False"
    ColumnWidth="*"
    ItemsSource="{Binding Channels}"
    SelectionMode="Extended"
    AutoGenerateColumns="False"
    SelectionUnit="Cell" >
            <DataGrid.Columns>
                <DataGridTextColumn Header="Id" Binding="{Binding Id}" Visibility="Hidden"></DataGridTextColumn>
                <DataGridTextColumn Header="虚拟通道名称" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="创建时间" IsReadOnly="True" Binding="{Binding CreateTime}" Width="*"/>
                <DataGridTextColumn Header="更新时间" IsReadOnly="True" Binding="{Binding UpdateTime}" Width="*"/>
                <DataGridTemplateColumn Header="操作"  Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="编辑" Width="80" Margin="5"
                                    Command="{Binding DataContext.EditPseudoChannelCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                    CommandParameter="{Binding Id}"></Button>
                                <Button Content="删除" Width="80" Margin="5"
                                        Click="DeletePseudoChannel_Click" 
                                    Tag="{Binding Id}"></Button>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
