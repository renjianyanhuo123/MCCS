<UserControl x:Class="MCCS.Views.Pages.ControlCommandPages.ViewManualControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:controlcommandpages="clr-namespace:MCCS.ViewModels.Pages.ControlCommandPages" 
             d:DataContext="{d:DesignInstance Type=controlcommandpages:ViewManualControlViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <!-- note you only need bring in these extra resource dictionaries when using non-default styles, so only bring them into your controls where the default style is not what you want -->
                <ResourceDictionary Source="pack://application:,,,/MaterialDesignThemes.Wpf;component/Themes/MaterialDesignTheme.Slider.xaml" /> 
            </ResourceDictionary.MergedDictionaries>
            <Thickness x:Key="StackPanelMargin">0,25,0,0</Thickness>
            <Thickness x:Key="TextMargin">0,0,0,5</Thickness>
        </ResourceDictionary>
    </UserControl.Resources>
    <StackPanel>
        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Text="设定输出最小值" Margin="{StaticResource TextMargin}"/>
            <Slider
              Maximum="{Binding OutputMaxValue}"
              Minimum="0"
              TickFrequency="5"
              SmallChange="1"
              Style="{StaticResource MaterialDesignDiscreteSlider}"
              LargeChange="5"
              Value="{Binding OutputMinValue}" />
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Text="设定输出最大值" Margin="{StaticResource TextMargin}" />
            <Slider
              Maximum="100.0"
              Minimum="{Binding OutputMinValue}"
              Style="{StaticResource MaterialDesignDiscreteSlider}"
              TickFrequency="5"
              SmallChange="1"
              LargeChange="5"
              Value="{Binding OutputMaxValue}" />
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock  Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Text="设定输出值(%)" Margin="{StaticResource TextMargin}" />
            <materialDesign:DecimalUpDown
          ValueStep="{Binding ChangeStep}"
          Minimum="{Binding OutputMinValue}"
          Maximum="{Binding OutputMaxValue}"
          Value="{Binding OutPutValue}"/>
        </StackPanel>
    </StackPanel>
</UserControl>
