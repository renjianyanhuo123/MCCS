<UserControl x:Class="MCCS.Views.Pages.ControlCommandPages.ViewFatigueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages.ControlCommandPages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <GroupBox Header="控制模式">
            <ComboBox
                x:Name="control_mode" 
                SelectedIndex="0">
                <ComboBoxItem TabIndex="0" Content="位移"  Tag="mm"/>
                <ComboBoxItem TabIndex="1" Content="试验力" Tag="kN" />
            </ComboBox>
        </GroupBox>

        <GroupBox Header="波形">
            <ComboBox SelectedIndex="0">
                <ComboBoxItem TabIndex="0" Content="正弦波"  />
                <ComboBoxItem TabIndex="1" Content="方波"   />
                <ComboBoxItem TabIndex="2" Content="二角波"  />
                <ComboBoxItem TabIndex="3" Content="斜波"   />
                <ComboBoxItem TabIndex="4" Content="半正弦波"  />
            </ComboBox>
        </GroupBox>

        <TextBox  Text="Hz" />

        <TextBox /> 
        <Separator Margin="0 5" />
        <StackPanel HorizontalAlignment="Center"
                 Orientation="Horizontal">
            <Button Width="100" 
                Content="应用"
                Margin="0 0 5 0" />
            <Button Width="100" 
            Content="中值"
            Margin="0 0 5 0"  />
            <Button Width="100" 
            Content="暂停"
            Margin="0 0 5 0" />
            <Button Width="100" 
            Content="补偿"  />
        </StackPanel>
    </StackPanel>
</UserControl>
