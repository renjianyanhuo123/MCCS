<UserControl x:Class="MCCS.Views.Pages.ControlCommandPages.ViewFatigueControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:convert="clr-namespace:MCCS.Converters.ControlCommand"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:controlcommandpages="clr-namespace:MCCS.ViewModels.Pages.ControlCommandPages"
             xmlns:testStarting="clr-namespace:MCCS.Converters.TestStarting"
             d:DataContext="{d:DesignInstance Type=controlcommandpages:ViewFatigueControlViewModel}"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Thickness x:Key="StackPanelMargin">0,25,0,0</Thickness>
        <Thickness x:Key="TextMargin">0,0,0,5</Thickness>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></BooleanToVisibilityConverter>
        <convert:EnumToSuffixTextConverter x:Key="EnumToSuffixTextConverter" />
    </UserControl.Resources>
    <StackPanel> 
        <StackPanel>
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="控制模式" />
            <ComboBox
                x:Name="ControlMode" ItemsSource="{Binding Channels}"
                SelectedItem="{Binding SelectedChannel}" 
                DisplayMemberPath="ChannelName"> 
            </ComboBox>
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="波形" />
            <ComboBox SelectedIndex="{Binding WaveformType, Mode=TwoWay}">
                <ComboBoxItem TabIndex="0" Content="正弦波"  />
                <ComboBoxItem TabIndex="1" Content="方波"   />
                <ComboBoxItem TabIndex="2" Content="三角波"  />
                <ComboBoxItem TabIndex="3" Content="斜波"   />
                <ComboBoxItem TabIndex="4" Content="半正弦波"  />
            </ComboBox>
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="频率" />
            <TextBox Text="{Binding Frequency, Mode=TwoWay}" 
                    materialDesign:HintAssist.Hint="请输入频率" 
                    materialDesign:TextFieldAssist.SuffixText="Hz"> 
            </TextBox>
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="幅值" />
            <TextBox Text="{Binding Amplitude, Mode=TwoWay}" 
                    materialDesign:HintAssist.Hint="请输入幅值" 
                     materialDesign:TextFieldAssist.SuffixText="{Binding SelectedControlUnitType, Converter={StaticResource EnumToSuffixTextConverter}}">
            </TextBox>
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="中值" />
            <UniformGrid Columns="2">
                <TextBox Text="{Binding Median, Mode=TwoWay}" 
                         materialDesign:HintAssist.Hint="请输入中值" 
                         materialDesign:TextFieldAssist.SuffixText="{Binding SelectedControlUnitType, Converter={StaticResource EnumToSuffixTextConverter}}" />
                <Button Content="调整中值" Width="Auto" Height="Auto" Margin="3,0,0,0"></Button>
            </UniformGrid> 
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="循环次数" />
            <TextBox Text="{Binding CycleTimes, Mode=TwoWay}" />
        </StackPanel>
        <StackPanel Margin="{StaticResource StackPanelMargin}">
            <TextBlock Style="{StaticResource MaterialDesignSubtitle2TextBlock}" Margin="{StaticResource TextMargin}" Text="循环计数" />
            <TextBox IsEnabled="False" Text="{Binding CycleCount}" />
        </StackPanel>
        <UniformGrid Columns="4" Margin="{StaticResource StackPanelMargin}">
            <TextBlock Text="幅值补偿:" />
            <TextBox Text="{Binding CompensateAmplitude, UpdateSourceTrigger=PropertyChanged}"></TextBox>
            <TextBlock Text="相位补偿:" />
            <TextBox Text="{Binding CompensatePhase, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        </UniformGrid>
        <UniformGrid Margin="0,5,0,0" Columns="2"
                     Visibility="{Binding IsRunning, Converter={StaticResource BooleanToVisibilityConverter}}">
            <Button Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}"
                    Margin="0,0,5,0"
                    Content="应用" />
            <Button Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}"
                    Content="解锁" />
        </UniformGrid> 
    </StackPanel>
</UserControl>
