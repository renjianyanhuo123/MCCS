<UserControl x:Class="MCCS.Views.Pages.SplashPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Pages"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 渐变画刷 -->
        <LinearGradientBrush x:Key="BackgroundBrush" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#667eea" Offset="0"/>
            <GradientStop Color="#764ba2" Offset="1"/>
        </LinearGradientBrush>

        <!-- 加载动画 -->
        <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
            <DoubleAnimation Storyboard.TargetName="LoadingEllipse"
                       Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                       From="0" To="360" Duration="0:0:2"/>
        </Storyboard>

        <!-- 淡入动画 -->
        <Storyboard x:Key="FadeInAnimation">
            <DoubleAnimation Storyboard.TargetName="MainGrid"
                       Storyboard.TargetProperty="Opacity"
                       From="0" To="1" Duration="0:0:1"/>
        </Storyboard>
    </UserControl.Resources>

    <UserControl.Triggers>
        <EventTrigger RoutedEvent="Window.Loaded">
            <BeginStoryboard Storyboard="{StaticResource FadeInAnimation}"/>
            <BeginStoryboard Storyboard="{StaticResource LoadingAnimation}"/>
        </EventTrigger>
    </UserControl.Triggers>

    <Border CornerRadius="15" Background="{StaticResource BackgroundBrush}">
        <Border.Effect>
            <DropShadowEffect Color="Black" 
                        BlurRadius="30" 
                        ShadowDepth="5" 
                        Opacity="0.3"/>
        </Border.Effect>

        <Grid x:Name="MainGrid" Opacity="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- 应用图标/Logo区域 -->
            <Ellipse Grid.Row="1" 
                 x:Name="LoadingEllipse"
                 Width="80" 
                 Height="80" 
                 Margin="0,20,0,30"
                 RenderTransformOrigin="0.5,0.5">
                <Ellipse.RenderTransform>
                    <RotateTransform/>
                </Ellipse.RenderTransform>
                <Ellipse.Fill>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#FFFFFF" Offset="0"/>
                        <GradientStop Color="#E0E0E0" Offset="1"/>
                    </LinearGradientBrush>
                </Ellipse.Fill>
                <Ellipse.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="10" Opacity="0.2"/>
                </Ellipse.Effect>
            </Ellipse>

            <!-- 应用名称 -->
            <TextBlock Grid.Row="2" 
                   Text="{Binding AppName}"
                   FontSize="28" 
                   FontWeight="Light"
                   Foreground="White" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,10">
                <TextBlock.Effect>
                    <DropShadowEffect Color="Black" BlurRadius="5" Opacity="0.3"/>
                </TextBlock.Effect>
            </TextBlock>

            <!-- 状态文本 -->
            <TextBlock Grid.Row="3" 
                   x:Name="StatusText"
                   Text="{Binding StatusText}"
                   FontSize="14" 
                   FontWeight="Normal"
                   Foreground="#E0FFFFFF" 
                   HorizontalAlignment="Center"
                   Margin="0,0,0,20"/>

            <!-- 进度条 -->
            <ProgressBar Grid.Row="3" 
                     x:Name="LoadingProgressBar"
                     Value="{Binding Progress}"
                     Height="4" 
                     Width="200"
                     Margin="0,25,0,0" 
                     IsIndeterminate="True"/>

            <!-- 版本信息 -->
            <TextBlock Grid.Row="4" 
                   Text="{Binding Version}"
                   FontSize="11" 
                   FontWeight="Light"
                   Foreground="#80FFFFFF" 
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="0,0,0,20"/>
        </Grid>
    </Border>
</UserControl>
