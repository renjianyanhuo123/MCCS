<mah:MetroWindow x:Class="MCCS.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MCCS" 
        xmlns:components="clr-namespace:MCCS.Components.GlobalNotification"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mah="http://metro.mahapps.com/winfx/xaml/controls"
        xmlns:prism="http://prismlibrary.com/"
        xmlns:viewmodels="clr-namespace:MCCS.ViewModels"
        d:DataContext="{d:DesignInstance Type=viewmodels:MainWindowViewModel}"
        prism:ViewModelLocator.AutoWireViewModel="True"
        Title="{DynamicResource AppName}" 
        WindowStartupLocation="CenterScreen"
        mc:Ignorable="d"
        ShowCloseButton="{Binding ShowCloseButton}"
        ShowTitleBar="{Binding ShowTitleBar}"
        Width="600"
        Height="400"
        WindowStyle="{Binding WindowStyle}"
        WindowState="{Binding WindowState}"
        ResizeMode="{Binding ResizeMode}">
    <i:Interaction.Triggers>  
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <mah:MetroWindow.LeftWindowCommands>
        <mah:WindowCommands>
            <Button ToolTip="Open up the GitHub site"> 
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.LeftWindowCommands>

    <mah:MetroWindow.RightWindowCommands>
        <mah:WindowCommands>
            <Button Content="">
                <Button.ContentTemplate>
                    <DataTemplate>
                        <StackPanel Orientation="Horizontal">
                        </StackPanel>
                    </DataTemplate>
                </Button.ContentTemplate>
            </Button>
        </mah:WindowCommands>
    </mah:MetroWindow.RightWindowCommands>
    <ContentControl prism:RegionManager.RegionName="{x:Static local:GlobalConstant.StartUpRegionName}"></ContentControl>
</mah:MetroWindow>
