<UserControl x:Class="MCCS.Views.ProjectManager.ProjectOperationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.ProjectManager"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:projectManager="clr-namespace:MCCS.ViewModels.ProjectManager"
             xmlns:layoutRootComponents="clr-namespace:MCCS.Components.LayoutRootComponents"
             xmlns:convert="clr-namespace:MCCS.Converters.TestStarting"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance projectManager:ProjectOperationPageViewModel}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <UserControl.Resources>
        <ResourceDictionary>
            <BooleanToVisibilityConverter x:Key="BoolToVisibilityConverter"/>
            <convert:InverseBoolToVisibleConverter x:Key="InverseBoolToVisibleConverter" />
            <convert:BoolToStyleConverter x:Key="BoolToStyleConverter" />
            <convert:BoolToStopAndStartTextContentConverter x:Key="BoolToStopAndStartTextContentConverter" />
            <convert:BoolToPauseAndContinueTextContentConverter x:Key="BoolToPauseAndContinueTextContentConverter" />
            <convert:BoolToGridLengthConverter x:Key="BoolToGridLengthConverter" />
            <convert:BoolToColumnSpanConverter x:Key="BoolToColumnSpanConverter" />
            <convert:BooleanToPauseAndContinueIconConverter  x:Key="BooleanToPauseAndContinueIconConverter" />
            <convert:BooleanToStopAndStartIconConverter  x:Key="BooleanToStopAndStartIconConverter" />  
        </ResourceDictionary>
    </UserControl.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="120" />
        </Grid.ColumnDefinitions>
        <layoutRootComponents:LayoutRoot Grid.Column="0" DataContext="{Binding LayoutRootViewModel}"></layoutRootComponents:LayoutRoot>
        <Border Grid.Column="1" Background="#F1F1F1">
            <StackPanel Orientation="Vertical">
                <!-- 开始和终止按钮 -->
                <StackPanel Margin="0,0,0,20">
                    <Button 
                    Margin="15"
                    VerticalAlignment="Center"
                    Content="{Binding IsStartedTest, Converter={StaticResource BooleanToStopAndStartIconConverter}}" 
                    Style="{Binding IsStartedTest, Converter={StaticResource BoolToStyleConverter}}"
                    Command="{Binding StartAndStopTestCommand}"
                    ToolTip="{Binding IsStartedTest, Converter={StaticResource BoolToStopAndStartTextContentConverter}}">
                    </Button>
                    <TextBlock
                            Text="{Binding IsStartedTest, Converter={StaticResource BoolToStopAndStartTextContentConverter}}" 
                            VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />
                </StackPanel>
                <!-- 暂停和继续按钮 -->
                <StackPanel>
                    <Button 
                        Margin="15"
                        VerticalAlignment="Center"
                        Content="{Binding IsPaused, Converter={StaticResource BooleanToPauseAndContinueIconConverter}}" 
                        Style="{Binding IsPaused, Converter={StaticResource BoolToStyleConverter}}"
                        Command="{Binding PauseAndContinueTestCommand}"
                        ToolTip="{Binding IsPaused, Converter={StaticResource BoolToPauseAndContinueTextContentConverter}}">
                    </Button>
                    <TextBlock
                       Text="{Binding IsPaused, Converter={StaticResource BoolToPauseAndContinueTextContentConverter}}" 
                       VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="14" FontWeight="Bold" />   
                </StackPanel>
            </StackPanel>
        </Border>
        
    </Grid>
</UserControl>
