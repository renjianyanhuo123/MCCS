<UserControl x:Class="MCCS.Views.ProjectManager.ProjectOperationPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.ProjectManager"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:projectManager="clr-namespace:MCCS.ViewModels.ProjectManager"
             xmlns:layoutRootComponents="clr-namespace:MCCS.Components.LayoutRootComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance projectManager:ProjectOperationPageViewModel}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <layoutRootComponents:LayoutRoot DataContext="{Binding LayoutRootViewModel}"></layoutRootComponents:LayoutRoot>
    </Grid>
</UserControl>
