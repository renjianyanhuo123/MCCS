<UserControl x:Class="MCCS.Views.ProjectManager.Components.ProjectDataMonitorComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.ProjectManager.Components"
             xmlns:components="clr-namespace:MCCS.ViewModels.ProjectManager.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance components:ProjectDataMonitorComponentPageViewModel}">
    <UserControl.Resources>
        <!-- 数据单元格样式 -->
        <Style x:Key="DataCellStyle" TargetType="Border">
            <Setter Property="Background">
                <Setter.Value>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                        <GradientStop Color="#FFF5F5F5" Offset="0"/>
                        <GradientStop Color="#FFEAEAEA" Offset="1"/>
                    </LinearGradientBrush>
                </Setter.Value>
            </Setter>
            <Setter Property="BorderBrush" Value="#FF007ACC"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="20"/>
        </Style>

        <!-- 标题文本样式 -->
        <Style x:Key="TitleTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF2F3A45"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
        </Style>

        <!-- 数值文本样式 -->
        <Style x:Key="ValueTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF2A7FFF"/>
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="FontFamily" Value="Consolas"/>
        </Style>

        <!-- 单位文本样式 -->
        <Style x:Key="UnitTextStyle" TargetType="TextBlock">
            <Setter Property="Foreground" Value="#FF7A8691"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>

        <!-- 状态指示器样式 -->
        <!--<Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="12"/>
            <Setter Property="Height" Value="12"/>
            <Setter Property="Fill" Value="#FF3CB371"/>
            <Style.Triggers>
                <EventTrigger RoutedEvent="Loaded">
                    <BeginStoryboard>
                        <Storyboard RepeatBehavior="Forever">
                            <DoubleAnimation Storyboard.TargetProperty="Opacity"
                                             From="1.0" To="0.4"
                                             Duration="0:0:1"
                                             AutoReverse="True"/>
                        </Storyboard>
                    </BeginStoryboard>
                </EventTrigger>
            </Style.Triggers>
        </Style>-->
    </UserControl.Resources>
    <Grid>
        <ItemsControl
            Margin="12,0,12,0"
            Grid.IsSharedSizeScope="True"
            ItemsSource="{Binding Chilldren}">
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <!-- 数据监控单元格 -->
                    <Border Style="{StaticResource DataCellStyle}" 
                            Width="300" Height="200"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">
                        <Border.Effect>
                            <DropShadowEffect Color="#FF007ACC" BlurRadius="15" 
                                ShadowDepth="0" Opacity="0.6"/>
                        </Border.Effect>

                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="Auto"/>
                                <RowDefinition Height="*"/> 
                            </Grid.RowDefinitions>

                            <!-- 标题栏 -->
                            <StackPanel Grid.Row="0" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
                                <!--<Ellipse Style="{StaticResource StatusIndicatorStyle}" Margin="0,0,10,0" VerticalAlignment="Center"/>-->
                                <TextBlock Text="{Binding DisplayName}" Style="{StaticResource TitleTextStyle}"/>
                            </StackPanel>

                            <!-- 分隔线 -->
                            <Rectangle Grid.Row="1" Height="1" Fill="#FF007ACC" 
                          Margin="0,0,0,15" Opacity="0.5"/>

                            <!-- 数值显示区 -->
                            <StackPanel Grid.Row="2" VerticalAlignment="Center">
                                <TextBlock x:Name="ValueText" 
                              Text="{Binding Value}" 
                              Style="{StaticResource ValueTextStyle}"/>
                                <TextBlock Text="{Binding Unit}" Style="{StaticResource UnitTextStyle}"/>
                            </StackPanel> 
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel  />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</UserControl>
