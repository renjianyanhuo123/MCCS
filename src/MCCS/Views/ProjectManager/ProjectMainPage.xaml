<UserControl x:Class="MCCS.Views.ProjectManager.ProjectMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.ProjectManager"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:regions="http://prismlibrary.com/"
             xmlns:mccs="clr-namespace:MCCS"
             xmlns:projectManager="clr-namespace:MCCS.ViewModels.ProjectManager"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance projectManager:ProjectMainPageViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="350"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel 
                Grid.Column="0" 
                Orientation="Horizontal">
                <RadioButton
                    Margin="4"
                    IsChecked="{Binding IsTestChecked}"
                    Width="150"
                    Command="{Binding NavigateTestCommand}"
                    Style="{StaticResource MaterialDesignTabRadioButton}">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="BottleSodaOutline" Width="24" Height="24"/>
                        <TextBlock
                            Margin="4,0,0,0"
                            Text="测试"
                            FontWeight="Bold"
                            FontSize="18"/>
                    </StackPanel>
                </RadioButton>
                <RadioButton
                    Margin="4"
                    IsChecked="{Binding IsMethodChecked}"
                    Width="150"
                    Command="{Binding NavigateMethodCommand}"
                    Style="{StaticResource MaterialDesignTabRadioButton}">
                    <StackPanel
                        Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="SourceBranch"  Width="24" Height="24" />
                        <TextBlock
                            Margin="4,0,0,0"
                            FontWeight="Bold"
                            Text="方法" FontSize="18"/>
                    </StackPanel>
                </RadioButton> 
            </StackPanel>
        </Grid>
        <ContentControl Grid.Row="1" regions:RegionManager.RegionName="{x:Static mccs:GlobalConstant.ProjectNavigateRegionName}" />
    </Grid>
</UserControl>
