<UserControl x:Class="MCCS.Views.ProjectManager.ProjectListPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:projectmanager="clr-namespace:MCCS.ViewModels.ProjectManager"
             xmlns:pagination="clr-namespace:MCCS.UserControl.Pagination;assembly=MCCS.UserControl"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=projectmanager:ProjectListPageViewModel}"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel Width="Auto" Orientation="Horizontal" Margin="30,20,30,20">
                    <TextBlock Text="创建时间：" FontSize="14" VerticalAlignment="Center" />
                    <DatePicker Width="140"
                                materialDesign:HintAssist.Hint="开始时间"
                                SelectedDate="{Binding StartTime, Mode=TwoWay}"
                                Style="{StaticResource MaterialDesignFilledDatePicker}" />
                    <TextBlock Text=" - " VerticalAlignment="Center" />
                    <DatePicker Width="140"
                                SelectedDate="{Binding EndTime, Mode=TwoWay}"
                                materialDesign:HintAssist.Hint="结束时间"
                                Style="{StaticResource MaterialDesignFilledDatePicker}" />
                </StackPanel>
                <StackPanel Width="Auto" Orientation="Horizontal" Margin="30,25,30,25">
                    <TextBlock Text="项目名称：" FontSize="14" VerticalAlignment="Center" />
                    <TextBox Text="{Binding ProjectName}" Width="120" FontSize="14" />
                </StackPanel>
                <StackPanel Width="Auto" Orientation="Horizontal" Margin="30,20,30,20">
                    <Button Width="80"
                            Content="查询"
                            Command="{Binding SearchCommand}"
                            Style="{StaticResource MaterialDesignFlatLightBgButton}"
                            ToolTip="查询" />
                    <Button Width="80"
                            Margin="15,0,0,0"
                            Content="重置"
                            Style="{StaticResource MaterialDesignPaperButton}"
                            ToolTip="重置" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        Margin="20,20,30,20"
                        VerticalAlignment="Center">
                <Button Content="{materialDesign:PackIcon Plus}"
                        Command="{Binding AddProjectCommand}"
                        ToolTip="添加项目"
                        Margin="0,0,15,0" />
            </StackPanel>
        </Grid>
        <DataGrid Grid.Row="1"
                  CanUserAddRows="False"
                  ColumnWidth="*"
                  ItemsSource="{Binding Projects}"
                  SelectionMode="Extended"
                  AutoGenerateColumns="False"
                  SelectionUnit="Cell">
            <DataGrid.Columns>
                <DataGridTextColumn Header="项目名称" Binding="{Binding Name}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="项目编号" Binding="{Binding Code}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="试验方法" Binding="{Binding MethodName}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="试验标准" Binding="{Binding Standard}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="试验人员" Binding="{Binding Person}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="文件路径" Binding="{Binding FilePath}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="试验时长" Binding="{Binding TestTime}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="开始时间" Binding="{Binding StartTime}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="备注" Binding="{Binding Remark}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="创建时间" Binding="{Binding CreateTime}" IsReadOnly="True" Width="*" />
                <DataGridTextColumn Header="更新时间" Binding="{Binding UpdateTime}" IsReadOnly="True" Width="*" />
                <DataGridTemplateColumn Header="操作" Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="{Binding TestOperationText}" Width="100" Click="TestOperation_OnClick"
                                        Tag="{Binding Id}">

                                </Button>
                                <Button Content="删除"
                                        Width="100"
                                        Click="Delete_OnClick"
                                        Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                        Tag="{Binding Id}" /> 
                            </StackPanel> 
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2"
                    Margin="15"
                    HorizontalAlignment="Right">
            <pagination:PaginationUserControl x:Name="PaginationUserControl"
                                              ShowTotal="True"
                                              Width="Auto"
                                              Height="Auto"
                                              Total="{Binding DataContext.TotalCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                              DefaultPageSize="10"
                                              DefaultCurrentPage="1"
                                              PageChangedCommand="{Binding DataContext.PageChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </Grid>
</UserControl>
