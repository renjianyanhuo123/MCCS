<UserControl x:Class="MCCS.Views.MethodManager.MethodContentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.MethodManager"
             mc:Ignorable="d" 
             xmlns:prism="http://prismlibrary.com/"
             xmlns:localContanst="clr-namespace:MCCS"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:localViewModel="clr-namespace:MCCS.ViewModels.MethodManager"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance localViewModel:MethodContentPageViewModel}">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="2" Orientation="Horizontal" 
                    Height="Auto"
                    Width="Auto"
                    Background="#F5F5F9">
            <Button Content="保存" Width="80" Margin="15,15,10,15"/>
            <Button Content="取消" Width="80" Margin="5,15,5,15"/>
        </StackPanel>
        <ListBox
            Grid.Row="1"
            Grid.Column="0"
            ItemsSource="{Binding Menus}"
            SelectedItem="{Binding SelectedMenuItem}">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <TextBlock Text="{Binding Name}" 
                               FontSize="14" 
                               Margin="25,8,8,8" />
                </DataTemplate>
            </ListBox.ItemTemplate>
        </ListBox>
        <ContentControl Grid.Row="1" Grid.Column="1"  prism:RegionManager.RegionName="{x:Static localContanst:GlobalConstant.MethodNavigateRegionName}" />
    </Grid>
</UserControl>
