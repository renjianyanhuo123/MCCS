<UserControl x:Class="MCCS.Views.MethodManager.ParamterSettings.MethodChartSetParamPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.MethodManager.ParamterSettings"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:paramterSettings="clr-namespace:MCCS.ViewModels.MethodManager.ParamterSettings"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance paramterSettings:MethodChartSetParamPageViewModel}">
    <!--<b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>-->
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="80"></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0">
            <TextBlock Text="图表类型:" FontSize="18"></TextBlock>
            <ComboBox FontSize="15" SelectedIndex="{Binding ChartType}">
                <ComboBoxItem>单Y轴</ComboBoxItem>
                <ComboBoxItem>多曲线</ComboBoxItem>
            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="1">
            <TextBlock Text="X轴:"  FontSize="18"></TextBlock>
            <ComboBox FontSize="15" ItemsSource="{Binding XBindCollection}"
                      SelectedItem="{Binding SelectedXElement}"
                      DisplayMemberPath="DisplayName">

            </ComboBox>
        </StackPanel>
        <StackPanel Grid.Row="2">
            <TextBlock Text="Y轴:"  FontSize="18"></TextBlock>
            <ComboBox FontSize="15" ItemsSource="{Binding YBindCollection}"
                      SelectedItem="{Binding SelectedYElement}"
                      DisplayMemberPath="DisplayName" />
        </StackPanel>
        <UniformGrid Grid.Row="4" Columns="2">
            <Button Width="80" Content="保存" Command="{Binding SaveCommand}"></Button>
            <Button Width="80" Content="取消" Style="{DynamicResource MaterialDesignOutlinedSecondaryLightButton}"></Button>
        </UniformGrid>
    </Grid>
</UserControl>
