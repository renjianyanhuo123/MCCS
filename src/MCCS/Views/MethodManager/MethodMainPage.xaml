<UserControl x:Class="MCCS.Views.MethodManager.MethodMainPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.MethodManager"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:methodmanager="clr-namespace:MCCS.ViewModels.MethodManager"
             xmlns:prism="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:pagination="clr-namespace:MCCS.UserControl.Pagination;assembly=MCCS.UserControl"
             prism:ViewModelLocator.AutoWireViewModel="True"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <b:Interaction.Triggers>
        <b:EventTrigger EventName="Loaded">
            <b:InvokeCommandAction 
                Command="{Binding LoadCommand}" />
        </b:EventTrigger>
    </b:Interaction.Triggers>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80"/>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="Auto"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <StackPanel Grid.Column="0" VerticalAlignment="Center" Orientation="Horizontal">
                <StackPanel Width="Auto"  Orientation="Horizontal" Margin="30,20,30,20">
                    <TextBlock Text="创建时间：" FontSize="14"  VerticalAlignment="Center"></TextBlock>
                    <DatePicker
                        Width="140"
                        materialDesign:HintAssist.Hint="开始时间"
                        SelectedDate="{Binding StartTime, Mode=TwoWay}"
                        Style="{StaticResource MaterialDesignFilledDatePicker}" />
                    <TextBlock Text=" - "  VerticalAlignment="Center"></TextBlock>
                    <DatePicker
                        Width="140"
                        SelectedDate="{Binding EndTime, Mode=TwoWay}"
                        materialDesign:HintAssist.Hint="结束时间"
                        Style="{StaticResource MaterialDesignFilledDatePicker}" />
                </StackPanel>
                <StackPanel Width="Auto"  Orientation="Horizontal" Margin="30,25,30,25">
                    <TextBlock Text="方法名称：" FontSize="14"  VerticalAlignment="Center"></TextBlock>
                    <TextBox Text="{Binding MethodName}" Width="100" FontSize="14"/>
                </StackPanel>
                <StackPanel Width="Auto"  Orientation="Horizontal" Margin="30,20,30,20">
                    <Button
                        Width="80"
                        Content="查询" 
                        Command="{Binding SearchCommand}"
                        Style="{StaticResource MaterialDesignFlatLightBgButton}"
                        ToolTip="查询" />
                    <Button
                        Width="80"
                        Margin="15,0,0,0"
                        Content="重置" 
                        Style="{StaticResource MaterialDesignPaperButton}"
                        ToolTip="重置" />
                </StackPanel>
            </StackPanel>
            <StackPanel Grid.Column="2" Orientation="Horizontal"
                        Margin="20,20,30,20"
                        VerticalAlignment="Center">
                <Button
                    Content="{materialDesign:PackIcon Plus}"
                    Command="{Binding AddMethodCommand}"
                    ToolTip="添加方法" 
                    Margin="0,0,15,0"/>
                <Button
                    Content="{materialDesign:PackIcon Import}"
                    Command="{Binding ImportMethod}"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    ToolTip="导入方法" /> 
            </StackPanel>
        </Grid>
        <DataGrid
             Grid.Row="1"
             CanUserAddRows="False"
             ColumnWidth="*"
             ItemsSource="{Binding Methods}"
             SelectionMode="Extended"
             AutoGenerateColumns="False"
             SelectionUnit="Cell" >
            <DataGrid.Columns> 
                <DataGridTextColumn Header="方法名称" Binding="{Binding Name}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="方法类型" Binding="{Binding MethodType}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="试验类型" Binding="{Binding TestType}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="标准" Binding="{Binding Standard}" IsReadOnly="True" Width="*"/>
                <DataGridTextColumn Header="文件路径" Binding="{Binding FilePath}" IsReadOnly="True" Width="*"/>  
                <DataGridTextColumn Header="创建时间" IsReadOnly="True" Binding="{Binding CreateTime}" Width="*"/>
                <DataGridTextColumn Header="更新时间" IsReadOnly="True" Binding="{Binding UpdateTime}" Width="*"/>
                <DataGridTemplateColumn Header="操作"  Width="*">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Button Content="编辑" Width="100"
                                        Command="{Binding DataContext.EditMethodCommand, RelativeSource={RelativeSource AncestorType=DataGrid}}"
                                        CommandParameter="{Binding Id}" />
                                <Button Content="删除" Width="100"
                                        Margin="15,0,0,0"
                                        Click="Delete_OnClick"
                                        Style="{StaticResource MaterialDesignPaperSecondaryLightButton}"
                                        Tag="{Binding Id}" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>

        <StackPanel Grid.Row="2" 
                    Margin="15"
                    HorizontalAlignment="Right">
            <pagination:PaginationUserControl 
                x:Name="PaginationUserControl" 
                ShowTotal="True"
                Width="Auto" 
                Height="Auto" 
                Total="{Binding DataContext.TotalCount, RelativeSource={RelativeSource AncestorType=UserControl}}"
                DefaultPageSize="10"
                DefaultCurrentPage="6"
                PageChangedCommand="{Binding DataContext.PageChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
        </StackPanel>
    </Grid>
</UserControl>
