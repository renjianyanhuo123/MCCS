<UserControl x:Class="MCCS.Views.Dialogs.SetCurveDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Dialogs"
             mc:Ignorable="d"  
             xmlns:prism="http://prismlibrary.com/"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF" xmlns:dialogs="clr-namespace:MCCS.ViewModels.Dialogs"
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance Type=dialogs:SetCurveDialogViewModel}">
    <i:Interaction.Triggers> 
        <i:EventTrigger EventName="Loaded">
            <i:InvokeCommandAction Command="{Binding LoadCommand}"/>
        </i:EventTrigger>
    </i:Interaction.Triggers>
    <UserControl.Resources>
        <Thickness x:Key="TextBottomThickness">0,0,0,5</Thickness>
        <Thickness x:Key="StackPanelBottomThickness">0,0,0,10</Thickness>
    </UserControl.Resources>
    <Grid MaxHeight="2160" MaxWidth="3840" MinHeight="400" MinWidth="600">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 控制面板 -->
        <StackPanel Grid.Row="0"  VerticalAlignment="Center" Width="Auto">
             <StackPanel Orientation="Vertical" Width="Auto" Margin="15">
                 <TextBlock Text="显示的图表数目" />
                <ComboBox 
                    ItemsSource="{Binding CountOptions}"
                    SelectedItem="{Binding SelectedCount, Mode=TwoWay}" >
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding CurveSelectionChangedCommand}"/>
                        </i:EventTrigger> 
                    </i:Interaction.Triggers>
                    <ComboBox.ItemTemplate>
                         <DataTemplate>
                             <TextBlock Text="{Binding StringFormat={}{0}个}"/>
                         </DataTemplate>
                     </ComboBox.ItemTemplate>
                </ComboBox>
             </StackPanel>
        </StackPanel>

        <!-- 动态表格容器 -->
        <ScrollViewer Grid.Row="1" Margin="10" HorizontalScrollBarVisibility="Auto" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding CurveModels}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border BorderBrush="Gray" BorderThickness="1" Margin="5" CornerRadius="4">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="15">
                                    <TextBlock Text="{Binding Curve.Title}" FontWeight="Bold" 
                                               FontSize="14"
                                               Margin="{StaticResource TextBottomThickness}" 
                                               HorizontalAlignment="Center"/>
                                    <TextBlock Text="X轴：" Margin="80,0,0,0"></TextBlock>
                                    <ComboBox Width="120" ItemsSource="{Binding DataContext.XBindCollection, RelativeSource={RelativeSource AncestorType=local:SetCurveDialog}}"
                                              SelectedItem="{Binding SelectedXBindItem}"
                                              DisplayMemberPath="DisplayName"> 
                                    </ComboBox>
                                    <TextBlock Text="Y轴：" Margin="15,0,0,0"></TextBlock>
                                    <ComboBox Width="120" ItemsSource="{Binding DataContext.YBindCollection, RelativeSource={RelativeSource AncestorType=local:SetCurveDialog}}"
                                              DisplayMemberPath="DisplayName" SelectedItem="{Binding SelectedYBindItem}"> 
                                    </ComboBox>
                                </StackPanel>
                                <lvc:CartesianChart
                                    Grid.Row="1"
                                    AnimationsSpeed="0:0:0"
                                    Title="{Binding Curve.Title}" 
                                    Series="{Binding Curve.CurveSeries}" 
                                    XAxes="{Binding Curve.XAxes}"
                                    YAxes="{Binding Curve.YAxes}" >
                                </lvc:CartesianChart>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <UniformGrid  Margin="5" />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl> 
        </ScrollViewer>
    </Grid>
</UserControl>
