<UserControl x:Class="MCCS.Views.Dialogs.AddModel3DDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Dialogs" 
             xmlns:prism="http://prismlibrary.com/"
             prism:ViewModelLocator.AutoWireViewModel="True"
             xmlns:dialogs="clr-namespace:MCCS.ViewModels.Dialogs" 
             d:DataContext="{d:DesignInstance Type=dialogs:AddModel3DDialogViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <GroupBox
            Width="500"
            Height="Auto"
            Margin="16"
            Header="添加3D模型"
            Style="{StaticResource MaterialDesignCardGroupBox}">
            <StackPanel>
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="模型名称:" Margin="0,0,0,5" />
                    <TextBox Text="{Binding ModelName}" Margin="0,0,0,5"/>
                </StackPanel>
                <StackPanel Margin="0,0,0,10">
                    <TextBlock Text="模型是否使用:" Margin="0,0,0,5" />
                    <ToggleButton IsChecked="{Binding IsUse}" />
                </StackPanel>
                <Separator Margin="0,0,0,10"></Separator>
                <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                    <Button Content="确定" Style="{StaticResource MaterialDesignRaisedSecondaryButton}" 
                            Command="{Binding OkCommand}" Margin="0,0,15, 0"></Button>
                    <Button Content="取消" Command="{Binding CancelCommand}"></Button>
                </StackPanel>
            </StackPanel>
        </GroupBox>
    </Grid>
</UserControl>
