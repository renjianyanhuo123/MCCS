<UserControl x:Class="MCCS.Views.Dialogs.Method.AddMethodDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Views.Dialogs.Method"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes" 
             xmlns:method="clr-namespace:MCCS.ViewModels.Dialogs.Method" 
             xmlns:prism="http://prismlibrary.com/" 
             prism:ViewModelLocator.AutoWireViewModel="True"
             d:DataContext="{d:DesignInstance Type=method:AddMethodDialogViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <Style x:Key="HoverBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="#F1F1F1"/>
            <Setter Property="BorderBrush" Value="Gray"/>
            <Setter Property="CornerRadius" Value="3"></Setter>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="10"/>
            <Setter Property="Width" Value="30" />
            <Setter Property="Height" Value="30" />
            <Setter Property="Cursor" Value="Hand" />
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="LightBlue"/>
                    <Setter Property="BorderBrush" Value="DodgerBlue"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Grid Height="600" Width="800">
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="100"></RowDefinition>
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0,0,0,2" BorderBrush="#C5C5C5">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="80"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <TextBlock Grid.Column="0"  Text="添加方法"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="20"
                   VerticalAlignment="Center"
                   HorizontalAlignment="Left"></TextBlock> 
                <Border Grid.Column="1" Margin="20"
                        HorizontalAlignment="Right"
                        Style="{StaticResource HoverBorderStyle}" >
                    <b:Interaction.Triggers>
                        <b:EventTrigger EventName="MouseDown">
                            <b:InvokeCommandAction 
                                Command="{Binding CloseCommand}" />
                        </b:EventTrigger>
                    </b:Interaction.Triggers>
                    <Viewbox>
                        <materialDesign:PackIcon Kind="Close" />
                    </Viewbox>
                </Border>
            </Grid>
        </Border>
        <ScrollViewer Grid.Row="1">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <StackPanel Grid.Column="0" Grid.Row="0" Margin="15">
                    <TextBlock Text="方法名称" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <TextBox Width="Auto" Text="{Binding Name}"></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="0" Margin="15">
                    <TextBlock Text="编号" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <TextBox Width="Auto" Text="{Binding Code}"></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="1" Margin="15">
                    <TextBlock Text="方法类型" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <ComboBox  Width="Auto" SelectedIndex="{Binding MethodType}">
                        <ComboBoxItem TabIndex="0">疲劳</ComboBoxItem> 
                    </ComboBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="1" Margin="15">
                    <TextBlock Text="试验类型" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <ComboBox  Width="Auto" SelectedIndex="{Binding TestType}">
                        <ComboBoxItem TabIndex="0">静态</ComboBoxItem>
                        <ComboBoxItem TabIndex="1">动态</ComboBoxItem>
                    </ComboBox>
                </StackPanel> 
                <StackPanel Grid.Column="0" Grid.Row="2"  Margin="15">
                    <TextBlock Text="标准" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <TextBox Text="{Binding Standard}"></TextBox>
                </StackPanel>
                <StackPanel Grid.Column="1" Grid.Row="2" 
                    Margin="15" >
                    <TextBlock Text="文件路径" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <StackPanel Orientation="Horizontal" Width="Auto">
                        <TextBox IsEnabled="False" Width="200" Text="{Binding FilePath}"></TextBox>
                        <Button Content="{materialDesign:PackIcon FileMoveOutline}"></Button>
                    </StackPanel> 
                </StackPanel>
                <StackPanel Grid.Column="0" Grid.Row="3" Grid.ColumnSpan="2"  Margin="15">
                    <TextBlock Text="备注" FontSize="14" Margin="0,0,0,15"></TextBlock>
                    <TextBox TextWrapping="Wrap"
                             AcceptsReturn="True"
                             Text="{Binding Remark}"></TextBox>
                </StackPanel>
            </Grid>
        </ScrollViewer>
        <Border Grid.Row="2" Grid.Column="0" 
        BorderThickness="0,2,0,0" BorderBrush="#C5C5C5">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button 
            Content="取消" 
            Width="80"
            Command="{Binding CloseCommand}"
            Style="{StaticResource MaterialDesignOutlinedSecondaryButton}" />
                <Button
            Width="80"
            Content="提交" 
            Margin="30,0,30,0"
            Command="{Binding SaveCommand}"
            Style="{StaticResource MaterialDesignFlatMidBgButton}" />
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
