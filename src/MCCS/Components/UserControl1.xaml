<UserControl x:Class="MCCS.Components.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Components"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Canvas Background="LightGray">
        <!-- 顶面 -->
        <Polygon Points="100,150 150,100 250,100 200,150"
                 Stroke="Gray" StrokeThickness="0.5">
            <Polygon.Fill>
                <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#444444" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>
        <!-- 侧面 -->
        <Polygon Points="200,150 250,100 250,200 200,250"
                 Stroke="Gray" StrokeThickness="0.5">
            <Polygon.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#333333" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>
        <!-- 正面 -->
        <Polygon Points="100,150 200,150 200,250 100,250"
                 Stroke="Gray" StrokeThickness="0.5">
            <Polygon.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                    <GradientStop Color="Black" Offset="0"/>
                    <GradientStop Color="#222222" Offset="0.5"/>
                    <GradientStop Color="Black" Offset="1"/>
                </LinearGradientBrush>
            </Polygon.Fill>
        </Polygon>
    </Canvas>
</UserControl>
