        <ResourceDictionary Source="/MCCS.Controls;component/Themes/Colors.xaml"/>
        <ResourceDictionary Source="/MCCS.Controls;component/Themes/CurvedTab.xaml"/>
    </ResourceDictionary.MergedDictionaries>

    <Style TargetType="{x:Type nav:CurvedTabControl}" />

    <Style TargetType="{x:Type nav:CurvedTabItem}" />
</ResourceDictionary>
