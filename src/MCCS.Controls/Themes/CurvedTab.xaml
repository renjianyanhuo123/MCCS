<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:nav="clr-namespace:MCCS.Controls.Controls.Navigation">
    <!-- ========== TabItem 样式 ========== -->
    <Style TargetType="{x:Type nav:CurvedTabItem}">
        <Setter Property="Foreground" Value="White"/>
        <Setter Property="Height" Value="60"/>
        <Setter Property="MinWidth" Value="120"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type nav:CurvedTabItem}">
                    <Grid>
                        <!-- 弧形背景 -->
                        <Path x:Name="BackgroundPath"
                              Fill="#666666"
                              Stroke="#333333"
                              StrokeThickness="1"
                              Data="M0,60 
                                    Q20,0 60,0 
                                    L120,0 
                                    Q160,0 180,60 
                                    Z"/>

                        <!-- 标题 -->
                        <ContentPresenter
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            ContentSource="Header"
                            Margin="0,10,0,0"/>
                    </Grid>

                    <ControlTemplate.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter TargetName="BackgroundPath" Property="Fill" Value="#B00020"/>
                            <Setter Property="Panel.ZIndex" Value="10"/>
                            <Setter Property="FontWeight" Value="Bold"/>
                        </Trigger>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BackgroundPath" Property="Fill" Value="#888888"/>
                        </Trigger>

                        <Trigger Property="IsEnabled" Value="False">
                            <Setter Property="Opacity" Value="0.5"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

    <!-- ========== TabControl 样式 ========== -->
    <Style TargetType="{x:Type nav:CurvedTabControl}">
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type nav:CurvedTabControl}">
                    <DockPanel>
                        <!-- Tab Header -->
                        <TabPanel DockPanel.Dock="Top"
                                  IsItemsHost="True"
                                  Background="#444"
                                  Height="60"/>

                        <!-- 内容区 -->
                        <Border Background="#1E1E1E">
                            <ContentPresenter
                                ContentSource="SelectedContent"/>
                        </Border>
                    </DockPanel>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
