<UserControl x:Class="MCCS.WorkflowSetting.WorkflowCanvasPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.WorkflowSetting" 
             d:DataContext="{d:DesignInstance Type=local:WorkflowCanvasPageViewModel}"
             xmlns:localViewModel="clr-namespace:MCCS.WorkflowSetting.Models.Nodes"
             xmlns:localComponents="clr-namespace:MCCS.WorkflowSetting.Components"
             xmlns:converters="clr-namespace:MCCS.WorkflowSetting.Converters"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <UserControl.Resources>
        <!-- 为每个类型定义隐式 DataTemplate，注意 DataType 属性 -->
        <DataTemplate DataType="{x:Type localViewModel:StepNode}">
            <localComponents:WorkflowStepNode />
        </DataTemplate> 
        <DataTemplate DataType="{x:Type localViewModel:AddOpNode}">
            <localComponents:WorkflowAddOperationNode  />
        </DataTemplate> 
        <DataTemplate DataType="{x:Type localViewModel:DecisionNode}">
            <localComponents:WorkflowDecisionNode  />
        </DataTemplate>
        <DataTemplate DataType="{x:Type localViewModel:BranchNode}">
            <localComponents:WorkflowBranchNode  />
        </DataTemplate>
        <DataTemplate DataType="{x:Type localViewModel:StartNode}">
            <localComponents:WorkflowStartNode  />
        </DataTemplate>
        <DataTemplate DataType="{x:Type localViewModel:EndNode}">
            <localComponents:WorkflowEndNode  />
        </DataTemplate>
        <converters:PointsToPathConverter x:Key="PointsToPathConverter"  />
    </UserControl.Resources> 
    <!-- Canvas with Scale/Translate transforms for zoom/pan -->
    <Canvas x:Name="WorkflowCanvas" Width="2000" Height="2000"
            Background="White">
        <b:Interaction.Triggers>
            <b:EventTrigger EventName="Loaded">
                <b:InvokeCommandAction Command="{Binding LoadedCommand}" CommandParameter="{Binding ElementName=WorkflowCanvas}" />
            </b:EventTrigger>
        </b:Interaction.Triggers>
        <!--<Canvas.RenderTransform>
            <ScaleTransform x:Name="CanvasScaleTransform" 
                        ScaleX="1" ScaleY="1" 
                        CenterX="0" CenterY="0"/>
        </Canvas.RenderTransform>--> 
        <!-- Edges layer -->
        <ItemsControl ItemsSource="{Binding Connections}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Path Data="{Binding Points, Converter={StaticResource PointsToPathConverter}}"
                      Stroke="#cccccc" StrokeThickness="1.5" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>

        <!-- Nodes layer -->
        <ItemsControl ItemsSource="{Binding Nodes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <Canvas />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemContainerStyle>
                <Style>
                    <Setter Property="Canvas.Left" Value="{Binding Position.X}" />
                    <Setter Property="Canvas.Top" Value="{Binding Position.Y}" />
                </Style>
            </ItemsControl.ItemContainerStyle>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <ContentControl Content="{Binding}">
                        <ContentControl.InputBindings>
                            <MouseBinding MouseAction="LeftClick" 
                                      Command="{Binding DataContext.NodeClickCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                                      CommandParameter="{Binding}" />
                        </ContentControl.InputBindings>
                    </ContentControl>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Canvas>
</UserControl>
