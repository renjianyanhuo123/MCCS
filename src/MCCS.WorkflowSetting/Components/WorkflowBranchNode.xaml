<UserControl x:Class="MCCS.WorkflowSetting.Components.WorkflowBranchNode"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.WorkflowSetting.Components"
             mc:Ignorable="d" 
             xmlns:localViewModel="clr-namespace:MCCS.WorkflowSetting.Models.Nodes"
             d:DesignHeight="85" d:DesignWidth="260" d:DataContext="{d:DesignInstance localViewModel:BranchNode}">
    <UserControl.Resources>
        <!-- 卡片样式 -->
        <Style x:Key="CardStyle" TargetType="Border">
            <Setter Property="Background" Value="White"/>
            <Setter Property="CornerRadius" Value="6"/> 
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect BlurRadius="10" 
                                      ShadowDepth="0" 
                                      Opacity="0.1" 
                                      Color="Black"/>
                </Setter.Value>
            </Setter>
        </Style>
        <!-- 菜单按钮样式 -->
        <Style x:Key="MenuButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="4"
                                Padding="3">
                            <ContentPresenter/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#F0F0F0"/>
                </Trigger>
            </Style.Triggers>
        </Style>
    </UserControl.Resources>
    <Border Style="{StaticResource CardStyle}" 
            Width="{Binding Width}" 
            Height="{Binding Height}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="10"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- 标题行 -->
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- 标题 -->
                <TextBlock Grid.Column="0"
                           Text="分支"
                           FontSize="20"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"/>

                <!-- 菜单按钮 -->
                <Button Grid.Column="1"
                        Style="{StaticResource MenuButtonStyle}"
                        VerticalAlignment="Center">
                    <TextBlock Text="⋯" 
                               FontSize="20" 
                               Foreground="#666666"
                               FontWeight="Bold"/>
                </Button>
            </Grid>

            <!-- 描述文本 -->
            <TextBlock Grid.Row="2"
                       Text="所有数据可进入该分支"
                       FontSize="14"
                       Foreground="#999999"/>
        </Grid>
    </Border>
</UserControl>
