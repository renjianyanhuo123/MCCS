<UserControl x:Class="MCCS.Interface.Components.Views.ControlOperationComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MCCS.Interface.Components.Views"
             xmlns:viewModels="clr-namespace:MCCS.Interface.Components.ViewModels.ControlOperationComponents"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance viewModels:ControlOperationComponentPageViewModel}">
    <UserControl.Resources>
        <!-- 悬浮面板背景渐变 - 从左上角向外辐射 -->
        <RadialGradientBrush x:Key="FloatingPanelBrush" GradientOrigin="0,0" Center="0,0" RadiusX="1.2" RadiusY="1.2">
            <GradientStop Color="#FFFF6B6B" Offset="0"/>
            <GradientStop Color="#FFEE5A5A" Offset="0.5"/>
            <GradientStop Color="#FFD94848" Offset="1"/>
        </RadialGradientBrush>

        <!-- 悬浮按钮样式 -->
        <Style x:Key="FloatingButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="ButtonBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="5"
                                Padding="10,8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="ButtonBorder" Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- 图标按钮样式 -->
        <Style x:Key="IconButtonStyle" TargetType="Button">
            <Setter Property="Width" Value="40"/>
            <Setter Property="Height" Value="40"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="IconBorder"
                                Background="{TemplateBinding Background}"
                                CornerRadius="20"
                                Width="{TemplateBinding Width}"
                                Height="{TemplateBinding Height}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="IconBorder" Property="Background" Value="#40FFFFFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="IconBorder" Property="Background" Value="#60FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>

    <Grid>
        <!-- 主内容区域 -->
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- 主要内容占位区 -->
        <Border Grid.Row="0" Background="#FFF8F8F8">
            <TextBlock Text="控制操作组件内容区"
                       HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       Foreground="#FF7A8691"
                       FontSize="16"/>
        </Border>

        <!-- 左上角 1/4 圆角悬浮面板 - 始终处于顶层 -->
        <Canvas Grid.Row="0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Panel.ZIndex="9999"
                Width="120" Height="120">

            <!-- 1/4 圆形悬浮背景 -->
            <Path Canvas.Left="0" Canvas.Top="0"
                  Fill="{StaticResource FloatingPanelBrush}">
                <Path.Effect>
                    <DropShadowEffect Color="#FFD94848"
                                      BlurRadius="20"
                                      ShadowDepth="5"
                                      Direction="315"
                                      Opacity="0.4"/>
                </Path.Effect>
                <Path.Data>
                    <!-- 1/4 圆弧: 从左上角开始，半径120 -->
                    <PathGeometry>
                        <PathFigure StartPoint="0,0" IsClosed="True">
                            <!-- 从左上角(0,0)向右到(120,0) -->
                            <LineSegment Point="120,0"/>
                            <!-- 画圆弧到(0,120) -->
                            <ArcSegment Point="0,120"
                                        Size="120,120"
                                        SweepDirection="Counterclockwise"
                                        IsLargeArc="False"/>
                            <!-- 连回左上角 -->
                            <LineSegment Point="0,0"/>
                        </PathFigure>
                    </PathGeometry>
                </Path.Data>
            </Path>

            <!-- 悬浮面板内的按钮/图标区域 -->
            <Grid Canvas.Left="0" Canvas.Top="0" Width="120" Height="120">
                <!-- 主操作按钮 - 位于1/4圆的左上角位置 -->
                <Button Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="15,15,0,0"
                        ToolTip="设置"
                        Command="{Binding SettingsCommand}">
                    <Path Data="M12,15.5A3.5,3.5 0 0,1 8.5,12A3.5,3.5 0 0,1 12,8.5A3.5,3.5 0 0,1 15.5,12A3.5,3.5 0 0,1 12,15.5M19.43,12.97C19.47,12.65 19.5,12.33 19.5,12C19.5,11.67 19.47,11.34 19.43,11L21.54,9.37C21.73,9.22 21.78,8.95 21.66,8.73L19.66,5.27C19.54,5.05 19.27,4.96 19.05,5.05L16.56,6.05C16.04,5.66 15.5,5.32 14.87,5.07L14.5,2.42C14.46,2.18 14.25,2 14,2H10C9.75,2 9.54,2.18 9.5,2.42L9.13,5.07C8.5,5.32 7.96,5.66 7.44,6.05L4.95,5.05C4.73,4.96 4.46,5.05 4.34,5.27L2.34,8.73C2.21,8.95 2.27,9.22 2.46,9.37L4.57,11C4.53,11.34 4.5,11.67 4.5,12C4.5,12.33 4.53,12.65 4.57,12.97L2.46,14.63C2.27,14.78 2.21,15.05 2.34,15.27L4.34,18.73C4.46,18.95 4.73,19.03 4.95,18.95L7.44,17.94C7.96,18.34 8.5,18.68 9.13,18.93L9.5,21.58C9.54,21.82 9.75,22 10,22H14C14.25,22 14.46,21.82 14.5,21.58L14.87,18.93C15.5,18.67 16.04,18.34 16.56,17.94L19.05,18.95C19.27,19.03 19.54,18.95 19.66,18.73L21.66,15.27C21.78,15.05 21.73,14.78 21.54,14.63L19.43,12.97Z"
                          Fill="White"
                          Stretch="Uniform"
                          Width="20" Height="20"/>
                </Button>

                <!-- 次要操作按钮 -->
                <Button Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="45,60,0,0"
                        Width="32" Height="32"
                        ToolTip="刷新"
                        Command="{Binding RefreshCommand}">
                    <Path Data="M17.65,6.35C16.2,4.9 14.21,4 12,4A8,8 0 0,0 4,12A8,8 0 0,0 12,20C15.73,20 18.84,17.45 19.73,14H17.65C16.83,16.33 14.61,18 12,18A6,6 0 0,1 6,12A6,6 0 0,1 12,6C13.66,6 15.14,6.69 16.22,7.78L13,11H20V4L17.65,6.35Z"
                          Fill="White"
                          Stretch="Uniform"
                          Width="16" Height="16"/>
                </Button>

                <!-- 第三个操作按钮 -->
                <Button Style="{StaticResource IconButtonStyle}"
                        HorizontalAlignment="Left"
                        VerticalAlignment="Top"
                        Margin="60,25,0,0"
                        Width="32" Height="32"
                        ToolTip="帮助"
                        Command="{Binding HelpCommand}">
                    <Path Data="M15.07,11.25L14.17,12.17C13.45,12.89 13,13.5 13,15H11V14.5C11,13.39 11.45,12.39 12.17,11.67L13.41,10.41C13.78,10.05 14,9.55 14,9C14,7.89 13.1,7 12,7A2,2 0 0,0 10,9H8A4,4 0 0,1 12,5A4,4 0 0,1 16,9C16,9.88 15.64,10.67 15.07,11.25M13,19H11V17H13M12,2A10,10 0 0,0 2,12A10,10 0 0,0 12,22A10,10 0 0,0 22,12C22,6.47 17.5,2 12,2Z"
                          Fill="White"
                          Stretch="Uniform"
                          Width="16" Height="16"/>
                </Button>
            </Grid>
        </Canvas>
    </Grid>
</UserControl>
