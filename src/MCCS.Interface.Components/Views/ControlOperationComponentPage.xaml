<UserControl x:Class="MCCS.Interface.Components.Views.ControlOperationComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MCCS.Interface.Components.Views"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controlOperationComponents="clr-namespace:MCCS.Interface.Components.ViewModels.ControlOperationComponents"
             xmlns:i="http://schemas.microsoft.com/xaml/behaviors" xmlns:behaviors="clr-namespace:MCCS.Interface.Components.Behaviors"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance controlOperationComponents:ControlOperationComponentPageViewModel}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Border Grid.Row="0" BorderThickness="0,0,0, 1" BorderBrush="BlueViolet">
            <StackPanel Width="Auto" Orientation="Horizontal">
                <Button Width="120" Height="25" Margin="10,0,0,0"
                        Content="组合控制通道" Command="{Binding CombineCommand}" />
            </StackPanel>
        </Border>
        <ItemsControl  Grid.Row="1"  
                       HorizontalAlignment="Left"  
                       Margin="5"
                       ItemsSource="{Binding ControlUnits}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <WrapPanel HorizontalAlignment="Left" VerticalAlignment="Top" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Border BorderBrush="Gray"
                            BorderThickness="1"
                            Margin="3"
                            CornerRadius="3"
                            Width="{Binding Width}"
                            Height="{Binding Height}">
                        <Grid>
                            <ContentControl Content="{Binding}" Margin="0,0,0,15"/>
                            <Border
                                Width="24"
                                Height="24"
                                Background="#FF2D89EF"
                                CornerRadius="24,0,0,0"
                                Cursor="SizeNWSE"
                                HorizontalAlignment="Right"
                                VerticalAlignment="Bottom">
                                <i:Interaction.Behaviors>
                                    <behaviors:ResizeBehavior
                                        TargetWidth="{Binding Width, Mode=TwoWay}"
                                        TargetHeight="{Binding Height, Mode=TwoWay}"
                                        MinWidth="200"
                                        MinHeight="300"
                                        MaxWidth="2000"
                                        MaxHeight="1000" />
                                </i:Interaction.Behaviors>
                                <materialDesign:PackIcon HorizontalAlignment="Right"
                                                         VerticalAlignment="Bottom"
                                                         Kind="ArrowTopLeftBottomRight" />
                            </Border>
                        </Grid>
                    </Border>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</UserControl>
