<UserControl x:Class="MCCS.Interface.Components.Views.ControlOperationComponents.ControlSingleUnitComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Interface.Components.Views.ControlOperationComponents"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:interactivity="http://prismlibrary.com/"
             xmlns:controlOperationComponents="clr-namespace:MCCS.Interface.Components.ViewModels.ControlOperationComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance controlOperationComponents:ControlSingleUnitComponent}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="Auto"></RowDefinition>
        </Grid.RowDefinitions> 
        <StackPanel Grid.Row="0">
            <CheckBox   Margin="5 5 5 8" 
                        IsChecked="{Binding IsParticipateCombineControl, Mode=TwoWay}"
                        Content="是否参与组合控制"
                        Style="{StaticResource MaterialDesignCheckBox}"  />
            <local:ControlCombineUnitChildComponentPage DataContext="{Binding ChildComponent}" />
        </StackPanel>
        <UniformGrid Grid.Row="1" Columns="2" Margin="0 20 0 0">
            <Button 
            Content="应用" Width="80"
            Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}"
            ToolTip="MaterialDesignFlatSecondaryDarkBgButton" 
            Command="{Binding ApplyCommand}"/>
            <Button  
            Content="暂停"
            Width="80"
            Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}"
            Command="{Binding StopCommand}"/>
        </UniformGrid>

    </Grid>
</UserControl>
