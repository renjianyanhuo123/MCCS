<UserControl x:Class="MCCS.Interface.Components.Views.ControlOperationComponents.ControlCombineUnitChildComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Interface.Components.Views.ControlOperationComponents"
             xmlns:interactivity="http://prismlibrary.com/"
             xmlns:b="http://schemas.microsoft.com/xaml/behaviors"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controlOperationComponents="clr-namespace:MCCS.Interface.Components.ViewModels.ControlOperationComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
             d:DataContext="{d:DesignInstance controlOperationComponents:ControlCombineUnitChildComponent}">
    <UserControl.Resources>
        <Thickness x:Key="GroupMargin">5,0,5,8</Thickness>
    </UserControl.Resources>
    <Grid>
        <ScrollViewer VerticalScrollBarVisibility="Auto" Grid.IsSharedSizeScope="True">
            <StackPanel>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="3*" />
                        <ColumnDefinition Width="4*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Style="{StaticResource MaterialDesignHeadline6TextBlock}"
                                Margin="0,5,0,10"
                                Text="{Binding ChannelName}" Cursor="Hand" />
                    
                    <StackPanel Grid.Column="1" Orientation="Horizontal" >
                        <TextBlock Text="阀台控制：" VerticalAlignment="Center" FontSize="18"/>
                        <ToggleButton IsChecked="True" 
                              Style="{StaticResource MaterialDesignSwitchToggleButton}"
                              ToolTip="阀门控制" />
                    </StackPanel>
                </Grid>
                <GroupBox   Margin="{StaticResource GroupMargin}"
                            Header="第一步：控制方式"
                            Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ComboBox 
                        materialDesign:HintAssist.Hint="选择控制模式"
                        Style="{StaticResource MaterialDesignFilledComboBox}"
                        ItemsSource="{Binding ControlModeSelections}"
                        DisplayMemberPath="ControlModeName"
                        SelectedItem="{Binding SelectedControlMode}">
                        <b:Interaction.Triggers>
                            <b:EventTrigger EventName="SelectionChanged">
                                <b:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </b:EventTrigger>
                            <b:EventTrigger EventName="Loaded">
                                <interactivity:InvokeCommandAction Command="{Binding ControlModeSelectionChangedCommand}"/>
                            </b:EventTrigger>
                        </b:Interaction.Triggers>
                    </ComboBox>
                </GroupBox>
                <GroupBox  Margin="{StaticResource GroupMargin}"
                           Header="第二步：控制参数"
                           Style="{StaticResource MaterialDesignCardGroupBox}">
                    <ContentControl Content="{Binding SelectedControlMode.ControlViewModel}" />
                </GroupBox>
            </StackPanel>
        </ScrollViewer>
    </Grid>
</UserControl>
