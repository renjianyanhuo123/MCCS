<UserControl x:Class="MCCS.Interface.Components.Views.ControlOperationComponents.ControlCombineUnitComponentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:MCCS.Interface.Components.Views.ControlOperationComponents"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:controlOperationComponents="clr-namespace:MCCS.Interface.Components.ViewModels.ControlOperationComponents"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800" d:DataContext="{d:DesignInstance controlOperationComponents:ControlCombineUnitComponent}">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <TextBlock Grid.Row="0" Text="{Binding Title}"
                   VerticalAlignment="Center" HorizontalAlignment="Center"
                   FontSize="28"
                   FontWeight="Bold" />
        <Button
            Grid.Row="1"
            Tag="{Binding ControlUnitId}"
            Style="{StaticResource MaterialDesignRaisedLightButton}"
            Command="{Binding UnLockCommand}"
            CommandParameter="{Binding ControlUnitId}"
            ToolTip="UnLock" Cursor="Hand">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                <materialDesign:PackIcon Kind="LinkOff" Margin="0,0,5,0"/>
                <TextBlock Text="解锁" VerticalAlignment="Center" />
            </StackPanel>
        </Button>
        <ComboBox Grid.Row="2" 
                  materialDesign:HintAssist.Hint="选择组合控制方式"
                  Style="{StaticResource MaterialDesignFilledComboBox}">
            <ComboBoxItem Content="跟随控制" />
            <ComboBoxItem Content="同步控制" /> 
        </ComboBox>
        <ItemsControl Grid.Row="3"
                      ItemsSource="{Binding Children}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <StackPanel Orientation="Horizontal" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <local:ControlCombineUnitChildComponentPage Width="300" DataContext="{Binding}" />
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
        <UniformGrid Grid.Row="4"  Margin="0 15 0 10">
            <Button 
                Content="应用"  
                Width="80"
                Style="{StaticResource MaterialDesignFlatSecondaryDarkBgButton}"
                ToolTip="MaterialDesignFlatSecondaryDarkBgButton" 
                Command="{Binding ApplyCommand}"/>
            <Button  
                Content="暂停" 
                Width="80"
                Style="{StaticResource MaterialDesignOutlinedSecondaryDarkButton}"
                Command="{Binding StopCommand}"/>
        </UniformGrid>
    </Grid>
</UserControl>
